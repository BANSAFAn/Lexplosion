<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.MainMenu.FriendsViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.MainMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="32,32">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Width="300"
            Height="64"
            Padding="16,12"
            VerticalAlignment="Top"
            Background="{DynamicResource SecondarySolidColorBrush}"
            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Width="38"
                    Height="38"
                    Background="{DynamicResource ActivitySolidColorBrush}"
                    CornerRadius="5" />

                <StackPanel Grid.Column="1" Margin="8,0">
                    <!--  Name & Status  -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="_Hel2x_" />
                        <Border
                            Width="10"
                            Height="10"
                            Margin="8,0,0,0"
                            Background="#009834"
                            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                            BorderThickness="1"
                            CornerRadius="10" />
                    </StackPanel>

                    <!--  Manual Friends Count  -->
                    <!--<TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                        Text="Manual Friends {0}" />-->

                    <!--  Current Activity  -->
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                        Text="Играет в 1.20.1 Fabric" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Column="2"
            Width="300"
            Height="64"
            Padding="16,12"
            VerticalAlignment="Top"
            Background="{DynamicResource SecondarySolidColorBrush}"
            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Width="38"
                    Height="38"
                    Background="{DynamicResource ActivitySolidColorBrush}"
                    CornerRadius="5" />

                <StackPanel Grid.Column="1" Margin="8,0">
                    <!--  Name & Status  -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="_Hel2x_" />
                        <Border
                            Width="10"
                            Height="10"
                            Margin="8,0,0,0"
                            Background="#009834"
                            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                            BorderThickness="1"
                            CornerRadius="10" />
                    </StackPanel>

                    <!--  Manual Friends Count  -->
                    <!--<TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                        Text="Manual Friends {0}" />-->

                    <!--  Current Activity  -->
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                        Text="Играет в 1.20.1 Fabric" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Background="{DynamicResource ActivitySolidColorBrush}"
                        Content="AddPerson"
                        Style="{StaticResource x32IconButtonActivityColor}" />
                    <Button
                        Margin="8,0,0,0"
                        Background="{DynamicResource ActivitySolidColorBrush}"
                        Content="RemovePerson"
                        Style="{StaticResource x32IconButtonActivityColor}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
