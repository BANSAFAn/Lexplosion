<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.PageCurtains.NightWorld.NightWorldPageCurtainsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:converters="clr-namespace:Lexplosion.WPF.NewInterface.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:limited="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels.Limited"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.PageCurtains.NightWorld"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=limited:NightWorldLimitedContentLayoutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource PrimarySolidColorBrush}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Border
                    Width="64"
                    Height="64"
                    HorizontalAlignment="Left">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/images/icons/nightworld.png" />
                    </Border.Background>
                </Border>

                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="20"
                    FontWeight="Medium"
                    Foreground="{DynamicResource ActivitySolidColorBrush}"
                    Text="{DynamicResource OnlyAvailableWithNightWorldAccount}"
                    TextAlignment="Left" />
                <TextBlock
                    Width="{Binding MainWindow.ActualWidth, Source={x:Static Application.Current}, Converter={converters:WindowWidthToXProcentWidth}, ConverterParameter=60}"
                    MaxWidth="600"
                    Margin="0,8,0,0"
                    FontSize="16"
                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                    Text="{DynamicResource OnlyAvailableWithNightWorldAccountDescription}"
                    TextAlignment="Left"
                    TextWrapping="WrapWithOverflow" />
                <WrapPanel
                    Margin="0,16,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <controls:AdvancedButton
                        Padding="8,6"
                        Command="{Binding ToCreateAccountCommand}"
                        FontSize="12"
                        FontWeight="Medium"
                        Style="{DynamicResource DefaultAdvancedButton}"
                        Text="{DynamicResource CreateNightWorldAccount}" />
                    <controls:AdvancedButton
                        Margin="8,0,0,0"
                        Padding="8,6"
                        Command="{Binding ToAuthorizationCommand}"
                        FontSize="12"
                        FontWeight="Medium"
                        Style="{DynamicResource DefaultAdvancedButton}"
                        Text="{DynamicResource LoginWithYourNightWorldAccount}" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
