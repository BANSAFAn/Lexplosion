<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.Profile.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:converters="clr-namespace:Lexplosion.WPF.NewInterface.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:lexplosion="clr-namespace:Lexplosion;assembly=Lexplosion.Core"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.Profile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:profile="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels.Profile"
    xmlns:profileObjects="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Models.Profile"
    d:DataContext="{d:DesignInstance Type=profile:ProfileViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <System:Double x:Key="StatsFontSize">14</System:Double>
        <Thickness x:Key="StatsHighlightPadding">16,0</Thickness>

        <DataTemplate DataType="{x:Type profileObjects:ProfileSocialMedia}">
            <Border
                x:Name="Border"
                Width="34"
                Height="34"
                Margin="4,0,0,0"
                Padding="6"
                Background="{DynamicResource SecondarySolidColorBrush}"
                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Cursor="Hand"
                MouseDown="Border_MouseDown">
                <Border>
                    <Viewbox>
                        <Path
                            x:Name="Path"
                            extensions:PathExtensions.StringKeyData="{Binding LogoName}"
                            Fill="{DynamicResource SecondaryForegroundSolidColorBrush}"
                            Stretch="Fill" />
                    </Viewbox>
                </Border>
            </Border>

            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Path" Property="Fill" Value="{DynamicResource ActivitySolidColorBrush}" />
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimarySolidColorBrush}" />
                </Trigger>
            </DataTemplate.Triggers>

        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="18,38,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Width="32"
            Margin="0,0,8,8"
            Background="{DynamicResource SecondarySolidColorBrush}"
            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
            BorderThickness="1"
            CornerRadius="5" />

        <!--  Profile Main Page  -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" MaxWidth="370" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Margin="0,0,8,8"
                Background="{DynamicResource PrimarySolidColorBrush}"
                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                CornerRadius="5">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="0.4*"
                            MinHeight="140"
                            MaxHeight="200" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        MaxHeight="220"
                        Background="DarkCyan"
                        CornerRadius="10"
                        Opacity="0.3"
                        SizeChanged="Border_SizeChanged" />

                    <Border
                        Grid.Row="1"
                        Margin="0,-16,0,0"
                        Background="{DynamicResource PrimarySolidColorBrush}"
                        CornerRadius="5" />

                    <Grid Grid.RowSpan="2" ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="0.5*"
                                MinHeight="150"
                                MaxHeight="225" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border
                            Width="86"
                            Height="86"
                            Padding="2"
                            VerticalAlignment="Bottom"
                            BorderThickness="3"
                            CornerRadius="1000">

                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Model.Status}" Value="{x:Static lexplosion:ActivityStatus.Online}">
                                            <Setter Property="BorderBrush" Value="{DynamicResource OnlineSolidColorBrush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Model.Status}" Value="{x:Static lexplosion:ActivityStatus.Offline}">
                                            <Setter Property="BorderBrush" Value="{DynamicResource OfflineSolidColorBrush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Model.Status}" Value="{x:Static lexplosion:ActivityStatus.InGame}">
                                            <Setter Property="BorderBrush" Value="{DynamicResource InGameSolidColorBrush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Model.Status}" Value="{x:Static lexplosion:ActivityStatus.NotDisturb}">
                                            <Setter Property="BorderBrush" Value="{DynamicResource DoNotDisturbSolidColorBrush}" />
                                            <!--<Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <RadialGradientBrush>
                                                        <GradientStop Offset="0" Color="#FF8800" />
                                                        <GradientStop Offset="0.35" Color="#FF6F00" />
                                                        <GradientStop Offset="0.56" Color="#FF1E00" />
                                                        <GradientStop Offset="0.74" Color="#FFA700" />
                                                        <GradientStop Offset="1" Color="#FF8000" />
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>-->
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border CornerRadius="1000">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Assets/images/icons/hel2xhead.png" />
                                </Border.Background>
                            </Border>
                        </Border>

                        <StackPanel Grid.Row="1" HorizontalAlignment="Center">

                            <TextBlock
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center"
                                FontSize="30"
                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                Text="{Binding Model.Name, Mode=OneWay}" />

                            <Border
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center"
                                Background="{Binding Model.Title.BackgroundColor, Mode=OneWay, Converter={converters:IntToSolidColorBrushConverter}}"
                                BorderBrush="{Binding Model.Title.BorderColor, Mode=OneWay, Converter={converters:IntToSolidColorBrushConverter}}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <TextBlock
                                    Padding="8,4"
                                    HorizontalAlignment="Center"
                                    Foreground="{Binding Model.Title.Color, Mode=OneWay, Converter={converters:IntToSolidColorBrushConverter}}"
                                    Text="{Binding Model.Title.Name, Mode=OneWay}" />
                            </Border>

                            <Border
                                Margin="0,0,0,0"
                                Padding="16"
                                HorizontalAlignment="Stretch">
                                <StackPanel>

                                    <!--  Stats  -->
                                    <Border
                                        Padding="16,16"
                                        Background="{DynamicResource SecondarySolidColorBrush}"
                                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">

                                        <Grid ShowGridLines="False">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Friends  -->
                                            <Border HorizontalAlignment="Right">

                                                <StackPanel>

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                        Text="{Binding Model.FriendsCount, Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                        Text="Друзей" />
                                                </StackPanel>
                                            </Border>

                                            <!--  Play time  -->
                                            <Border
                                                Grid.Column="1"
                                                Margin="{DynamicResource StatsHighlightPadding}"
                                                Padding="{DynamicResource StatsHighlightPadding}"
                                                BorderBrush="{DynamicResource ActivitySolidColorBrush}"
                                                BorderThickness="1,0">
                                                <StackPanel>

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                        <Run Text="{Binding Model.HoursCount, Mode=OneWay}" />
                                                        <Run Text="ч." />
                                                    </TextBlock>

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                        Text="Игровое время" />
                                                </StackPanel>
                                            </Border>

                                            <!--  Account age  -->
                                            <Border Grid.Column="2" HorizontalAlignment="Left">
                                                <StackPanel>

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                        Text="{Binding Model.AccountAge, Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="{DynamicResource StatsFontSize}"
                                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                        Text="Выслуга" />
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!--  Description  -->
                                    <Border
                                        Margin="0,8,0,0"
                                        Padding="20,16"
                                        Background="{DynamicResource SecondarySolidColorBrush}"
                                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <TextBlock
                                            FontSize="{DynamicResource StatsFontSize}"
                                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                            Text="{Binding Model.Summary, Mode=OneWay}"
                                            TextAlignment="Center"
                                            TextWrapping="WrapWithOverflow" />
                                    </Border>

                                    <ItemsControl
                                        Margin="0,4,0,0"
                                        HorizontalAlignment="Center"
                                        ItemsSource="{Binding Model.SocialMedia, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Grid
                x:Name="MainContentGrid"
                Grid.Column="1"
                Margin="0,0,8,0"
                ShowGridLines="True"
                SizeChanged="Grid_SizeChanged">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <controls:AdvancedTextBox Margin="0,0,0,8" Placeholder="Текст записи пожалуйста..." />

                    <Border
                        Grid.Row="1"
                        Background="{DynamicResource PrimarySolidColorBrush}"
                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                        CornerRadius="5" />
                </Grid>

                <Border
                    Margin="8,0,0,0"
                    Padding="8,12"
                    Background="{DynamicResource PrimarySolidColorBrush}"
                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                    CornerRadius="5">
                    <TextBlock
                        FontSize="16"
                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                        Text="Friends Online" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
