<UserControl
    x:Class="Lexplosion.WPF.NewInterface.ViewComponents.News.LatestNewsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:converters="clr-namespace:Lexplosion.WPF.NewInterface.Core.Converters"
    xmlns:core="clr-namespace:Lexplosion.WPF.NewInterface.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.ViewComponents.News"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:LatestNewsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Opacity="0.5" Color="Black" />
        </Grid.Background>

        <Border
            Grid.Column="1"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={converters:WindowWidthToXProcentWidth}, ConverterParameter=45}"
            Margin="0,32"
            Padding="16,12,16,0"
            HorizontalAlignment="Center"
            Background="{DynamicResource PrimarySolidColorBrush}"
            CornerRadius="5">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Margin="0,0,0,16">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="{DynamicResource WhatIsNew}" />
                        <TextBlock
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                            Text="{Binding Model.LatestUnseenNews.CreationDate, StringFormat='dd MMMM yy'}" />
                    </StackPanel>

                    <!--  Close Button  -->
                    <Button
                        Grid.Column="1"
                        Width="24"
                        Height="24"
                        Margin="10,0,0,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Panel.ZIndex="10000"
                        Command="{Binding CloseCommand}"
                        IsCancel="True">

                        <Button.Template>
                            <ControlTemplate>
                                <Border
                                    x:Name="border"
                                    Padding="6"
                                    Background="Transparent"
                                    CornerRadius="100">

                                    <Viewbox Height="16">
                                        <Path
                                            x:Name="CloseIcon"
                                            extensions:PathExtensions.StringKeyData="Close"
                                            Fill="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                            Stretch="Fill" />
                                    </Viewbox>

                                </Border>

                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsActive, ElementName=Loader}" Value="True">
                                        <Setter TargetName="CloseIcon" Property="Fill" Value="White" />
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource SecondarySolidColorBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!--  Content  -->
                <ScrollViewer Grid.Row="1" Margin="0,0,-16,0">
                    <Grid Margin="0,0,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="20"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="{Binding Model.LatestUnseenNews.Title}" />

                        <core:If Grid.Row="1" Condition="{Binding Model.LatestUnseenNews.BannerUrl, Converter={converters:IsValueNullConverter}}">
                            <core:If.True>
                                <Image
                                    Margin="0,0,0,16"
                                    HorizontalAlignment="Stretch"
                                    Source="{Binding Model.LatestUnseenNews.BannerUrl}"
                                    Stretch="UniformToFill" />
                            </core:If.True>
                        </core:If>

                        <TextBlock
                            Grid.Row="2"
                            FontSize="15"
                            Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                            Text="{Binding Model.LatestUnseenNews.Content}"
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</UserControl>
