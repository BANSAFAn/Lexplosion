<local:NightWorldUserViewBase
    x:Class="Lexplosion.WPF.NewInterface.ViewComponents.Users.Friend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:lexplosion="clr-namespace:Lexplosion;assembly=Lexplosion.Core"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.ViewComponents.Users"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueconverters="clr-namespace:Lexplosion.WPF.NewInterface.Core.Converters"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        x:Name="PART_BodyBorder"
        Grid.Column="0"
        Width="300"
        Height="64"
        Padding="16,12"
        VerticalAlignment="Top"
        Background="Transparent"
        BorderBrush="{DynamicResource FriendBorderSolidColorBrush}"
        BorderThickness="1"
        CornerRadius="5">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

                <Border
                    Width="38"
                    Height="38"
                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                    BorderThickness="1"
                    CornerRadius="2" />

                <Border
                    x:Name="AvatarBorder"
                    Width="38"
                    Height="38"
                    Background="{Binding AvatarUrl, Converter={valueconverters:ImageSourceNullValidateConverter}}"
                    CornerRadius="2" />

                <controls:CircleLoader
                    x:Name="AvatarLoader"
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BlurTarget="{Binding ElementName=AvatarBorder}"
                    IsActive="{Binding AvatarUrl, Converter={valueconverters:IsValueNullConverter}}" />
            </Grid>

            <StackPanel Grid.Column="1" Margin="12,0">
                <!--  Name & Status  -->
                <StackPanel Orientation="Horizontal">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="PART_NicknameTB"
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />

                        <!--  Показывать при наведении  -->
                        <Viewbox
                            Grid.Column="1"
                            Height="12"
                            Margin="4,1,0,0"
                            Opacity="1">
                            <Viewbox.Style>
                                <Style TargetType="Viewbox">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, ElementName=PART_BodyBorder}" Value="True" />
                                                <Condition Binding="{Binding Banner.SubscriptionColor, Converter={valueconverters:IsValueNullConverter}}" Value="False" />
                                            </MultiDataTrigger.Conditions>

                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Viewbox.Style>
                            <Path
                                Data="M5.18182 13L3.88636 11.019L1.43182 10.5238L1.67045 8.23333L0 6.5L1.67045 4.76667L1.43182 2.47619L3.88636 1.98095L5.18182 0L7.5 0.897619L9.81818 0L11.1136 1.98095L13.5682 2.47619L13.3295 4.76667L15 6.5L13.3295 8.23333L13.5682 10.5238L11.1136 11.019L9.81818 13L7.5 12.1024L5.18182 13ZM6.78409 8.69762L10.6364 5.2L9.68182 4.30238L6.78409 6.93333L5.31818 5.63333L4.36364 6.5L6.78409 8.69762Z"
                                Fill="#5afaff"
                                Stretch="Fill" />
                        </Viewbox>
                    </Grid>

                    <!--  Status Indicator  -->
                    <Border
                        x:Name="PART_StatusIndicator"
                        Width="10"
                        Height="10"
                        Margin="8,2,0,0"
                        Background="#009834"
                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                        BorderThickness="1"
                        CornerRadius="10" />
                </StackPanel>

                <!--  Manual Friends Count  -->
                <!--<TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                FontWeight="Medium"
                Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                Text="Manual Friends {0}" />-->

                <!--  Current Activity  -->
                <TextBlock
                    x:Name="PART_StatusTB"
                    Margin="0,2,0,0"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <controls:AdvancedToggleButton
                    x:Name="MoreMenuToggleButton"
                    Width="32"
                    Height="32"
                    Padding="6,0"
                    FocusVisualStyle="{x:Null}"
                    Foreground="{DynamicResource SecondaryForegroundSolidColorBrSSSush}"
                    IconData="{DynamicResource PDMore}">
                    <controls:AdvancedToggleButton.Style>
                        <Style BasedOn="{StaticResource IconTextTransparentAdvancedToggleButton}" TargetType="{x:Type controls:AdvancedToggleButton}">
                            <Setter Property="Visibility" Value="{Binding IsMouseOver, ElementName=PART_BodyBorder, Converter={valueconverters:BooleanToVisibilityConverter}}" />

                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </controls:AdvancedToggleButton.Style>
                </controls:AdvancedToggleButton>

                <Popup
                    AllowsTransparency="True"
                    IsOpen="{Binding IsChecked, ElementName=MoreMenuToggleButton}"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=MoreMenuToggleButton}"
                    StaysOpen="False">
                    <Border
                        Padding="0,8"
                        Background="{DynamicResource PrimarySolidColorBrush}"
                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <WrapPanel Orientation="Vertical">
                            <controls:AdvancedButton
                                Padding="10,0,16,0"
                                Command="{Binding ViewModelDataContext.ViewProfileCommand, RelativeSource={RelativeSource AncestorType={x:Type local:NightWorldUserViewBase}}}"
                                CommandParameter="{Binding}"
                                FocusVisualStyle="{x:Null}"
                                FontWeight="Medium"
                                IconData="{DynamicResource PDProfile}"
                                IconPadding="4"
                                Style="{StaticResource TransparentAdvancedButton}"
                                Text="{DynamicResource ViewProfile}"
                                TextPadding="8,0,0,0" />
                            <controls:AdvancedButton
                                Padding="10,0,16,0"
                                Command="{Binding ViewModelDataContext.ViewProfileCommand, RelativeSource={RelativeSource AncestorType={x:Type local:NightWorldUserViewBase}}}"
                                CommandParameter="{Binding}"
                                FocusVisualStyle="{x:Null}"
                                FontWeight="Medium"
                                Foreground="{DynamicResource ErrorSolidColorBrush}"
                                IconData="{DynamicResource PDPersonOff}"
                                IconPadding="4"
                                Style="{StaticResource TransparentAdvancedButton}"
                                Text="{DynamicResource Unfriend}"
                                TextBlock.TextAlignment="Left"
                                TextPadding="8,0,0,0" />
                        </WrapPanel>
                    </Border>
                </Popup>
            </StackPanel>
        </Grid>
    </Border>

</local:NightWorldUserViewBase>
