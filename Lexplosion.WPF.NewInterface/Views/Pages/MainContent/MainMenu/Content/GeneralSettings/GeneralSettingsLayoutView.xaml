        <!--<DataTemplate DataType="{x:Type localVM:TabItemModel}">
            <TabItem Header="{Binding TextKey}" IsSelected="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
        </DataTemplate>-->

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid x:Name="Root">
                            <Border
                                x:Name="Spacer"
                                Width="Auto"
                                Height="Auto"
                                Margin="0,0,0,0"
                                Padding="8"
                                BorderBrush="Transparent"
                                BorderThickness="0">
                                <Border
                                    x:Name="Border"
                                    Margin="0,0,0,0"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="0,0,0,0">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Width="Auto"
                                        Margin="0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True" />
                                </Border>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Border
        Padding="45,32,45,0"
        Background="{DynamicResource PrimarySolidColorBrush}"
        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
        BorderThickness="0,0,0,2">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <WrapPanel Margin="0,0,0,32" HorizontalAlignment="Left">

                <!--<Viewbox Height="20" Margin=0,0,8,0>
                        <Path
                            extensions:Path.StringKeyData="Settings"
                            Fill="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Stretch="Fill" />
                    </Viewbox>-->


                <TextBlock
                    extensions:TextBlock.TextByKey="settings"
                    FontSize="20"
                    FontWeight="Medium"
                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />
            </WrapPanel>

            <!--  TabControl ItemsSource="{Binding Tabs}"  -->
            <controls:UIUnderlineTabControl Grid.Row="1">
                <TabItem>
                    <TabItem.Header>
                        <TextBlock
                            extensions:TextBlock.TextByKey="general"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />
                    </TabItem.Header>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock
                            extensions:TextBlock.TextByKey="language"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />
                    </TabItem.Header>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock
                            extensions:TextBlock.TextByKey="about"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />
                    </TabItem.Header>
                </TabItem>
            </controls:UIUnderlineTabControl>
        </Grid>
    </Border>
</UserControl>
