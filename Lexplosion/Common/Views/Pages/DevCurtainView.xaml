<UserControl
    x:Class="Lexplosion.Common.Views.Pages.DevCurtainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.Common.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock
            Margin="0,50,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="25"
            Foreground="White"
            Opacity="0.8"
            Text="{Binding Message}"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />

        <Button
            Width="200"
            Padding="5"
            Command="{Binding ButtonActionCommand}"
            Content="{Binding ButtonContent}"
            FontSize="14"
            Style="{StaticResource DefaultBrandColorButton}"
            Visibility="{Binding HasButton, Converter={StaticResource ConvertBoolToVisibility}}" />
    </StackPanel>
</UserControl>
