<Page x:Class="Lexplosion.Gui.InstanceCreator.InstanceCreateMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.InstanceCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="InstanceCreateMainPage">

    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <Grid ShowGridLines="True">
                <Grid.Background>
                    <SolidColorBrush Color="#151515"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="130" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Название"
                        Grid.Column="1"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <TextBox x:Name="InstanceNameTextBox"
                        Grid.Column="1"
                        Style="{StaticResource CTB}"
                        Width="230"
                        Height="40"
                        HorizontalAlignment="Left"/>
                    <Button x:Name="InstanceLogo"
                        Grid.Column="2"
                        Width="120"
                        Height="120"></Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Описание"
                        Grid.Column="1"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <TextBox x:Name="InstanceOverviewTextBox"
                        Grid.Column="1"
                        Style="{StaticResource CTB}"
                        HorizontalAlignment="Left" Margin="0,37,-110,10" Width="411"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
