<Page x:Class="Lexplosion.Gui.InstanceCreator.InstanceCreateMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.InstanceCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstanceCreateMainPage">

    <Grid>
        <ScrollViewer>
            <Grid>
                <TextBlock x:Name="TextBlockInstanceName"
                    Text="Название"
                    Foreground="White"
                    FontSize="24" Margin="10,14,651,397"/>
                <TextBox x:Name="InstanceName" 
                    FontSize="20"
                    Height="42" 
                    Width="200" Margin="10,53,583,355"/>
                <TextBlock x:Name="TextBlockInstanceOverview"
                    Text="Описание"
                    Foreground="White"
                    FontSize="24" Margin="10,106,651,305"/>
                <TextBox x:Name="InstanceOverview" 
                    FontSize="20"
                    Height="42" 
                    Width="200" Margin="10,150,583,258"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
