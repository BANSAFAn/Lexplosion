<Page x:Class="Lexplosion.Gui.InstanceCreator.InstanceCreateMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.InstanceCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="InstanceCreateMainPage">

    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <Grid ShowGridLines="False">
                <Grid.Background>
                    <SolidColorBrush Color="#151515" Opacity="0.60"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="10" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Instance Name-->
                    <TextBlock Text="Название *"
                        Grid.Row="0"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"    
                        Width="Auto"
                        Height="Auto"/>
                    <TextBox x:Name="InstanceNameTextBox" 
                        Grid.Row="0"
                        FontSize="20"
                        Style="{StaticResource CTB}"
                        Width="230"
                        Height="40"
                        HorizontalAlignment="Left"/>
                    
                    <!-- Overview -->
                    <TextBlock Text="Описание"
                        Grid.Row="1"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <TextBox x:Name="OverviewTextBox" 
                        Grid.Row="1"
                        VerticalContentAlignment="Top"
                        Padding="0,2,0,0"
                        TextWrapping="WrapWithOverflow"
                        Style="{StaticResource CTB}"
                        Width="375"
                        Height="140"
                        HorizontalAlignment="Left"/>
                    <!-- Minecraft Version -->
                    <TextBlock Text="Версия майнкрафт *"
                        Grid.Row="2"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <ComboBox x:Name="OverviewCombobox" 
                        Grid.Row="2"
                        VerticalContentAlignment="Top"
                        Padding="0,2,0,0"
                        Width="300"
                        Height="40"
                        HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Forge Fabric *"
                        Grid.Row="3"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <ComboBox x:Name="ForgeFabricCombobox" 
                        Grid.Row="3"
                        VerticalContentAlignment="Top"
                        Padding="0,2,0,0"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Left"/>
                    <ComboBox x:Name="ModuleSelectedCombobox" 
                        Grid.Row="3"
                        VerticalContentAlignment="Top"
                        Margin="50,0,0,0"
                        Padding="0,2,0,0"
                        Width="220"
                        Height="40"
                        HorizontalAlignment="Left"/>
                </Grid>
                <Grid Grid.Column="1" ShowGridLines="True" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120" />
                        <RowDefinition Height="220" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>
                    <!-- Instance Logo -->
                    <Button x:Name="InstanceLogo"
                        Grid.Column="0"
                        Width="120"
                        Height="120"/>
                    <!-- Tags -->
                    <TextBlock Text="Теги"
                        Grid.Row="1"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="Auto"
                        Height="Auto"/>
                    <WrapPanel Grid.Row="1"
                        Background="#131313"
                        Margin="0,40,0,0"
                        >
                        <Button Style="{StaticResource TagStyle}" Content="Tags"/>
                        <Button Style="{StaticResource TagStyle}" Content="Tags"/>
                        <Button Style="{StaticResource TagStyle}" Content="Tags"/>
                        <Button Style="{StaticResource TagStyle}" Content="Tags"/>
                    </WrapPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
