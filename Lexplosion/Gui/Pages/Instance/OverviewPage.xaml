<Page x:Class="Lexplosion.Gui.Pages.Instance.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.Instance"
      xmlns:usercontrols="clr-namespace:Lexplosion.Gui.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="OverviewPage"
      >

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Page.Resources>
    <ScrollViewer>
        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="240"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="pack://application:,,,/Assets/images/background/regBG.png" Width="450"/>
                <Grid Grid.Column="1" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="1" Margin="10,0,10,0" 
                                Orientation="Vertical" Grid.Row="0">
                        <Border BorderThickness="0,0,0,1"
                                BorderBrush="LightGray">
                            <TextBlock Foreground="#ededed" 
                                       x:Name="VersionTB" 
                                       Text="Version: 1.16.5"/>
                        </Border>
                        <Border BorderThickness="0,0,0,1" 
                                BorderBrush="LightGray">
                            <TextBlock Foreground="#ededed" Text="Updated: Jan 22, 2022"/>
                        </Border>
                        <Border BorderThickness="0,0,0,1" 
                                BorderBrush="LightGray">
                            <TextBlock Foreground="#ededed" Text="Total: Downloads 10,877,594"/>
                        </Border>
                        <Border BorderThickness="0,0,0,1" 
                                BorderBrush="LightGray">
                            <TextBlock Foreground="#ededed" Text="Core: Fabric"/>
                        </Border>
                    </StackPanel>
                    <Button Content="Вебсайт" 
                           Grid.Row="1"
                           FontSize="14"
                           Width="130"
                           Style="{StaticResource CBS}" 
                           Name="CurseforgeUrl" 
                           Click="CurseforgeUrl_Click"
                           Height="29" Margin="60,10,59.6,21"/>
                </Grid>
            </Grid>
            <Border Grid.Row="4" BorderThickness="0,0,0,0" BorderBrush="#212326">
                <TextBlock Text="Тут короткое описание, которое находится в миниатюре." 
                       Grid.Row="2"
                       Width="690"
                       TextWrapping="Wrap" />
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
