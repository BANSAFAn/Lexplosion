<Page x:Class="Lexplosion.Gui.Pages.Instance.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.Instance"
      xmlns:usercontrols="clr-namespace:Lexplosion.Gui.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="OverviewPage"
      >

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Page.Resources>
    <Grid ShowGridLines="False" Opacity="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Image Source="pack://application:,,,/launcher_loading.png" Width="400"/>
        </Grid>

        <Grid ShowGridLines="False" Grid.Column="2" >
            <Grid.Background>
                <SolidColorBrush Color="#151515" Opacity="0.3"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Margin="10,0,10,0" Orientation="Vertical" Grid.Row="0">
                <Border BorderThickness="0,0,0,2" BorderBrush="#167FFC">
                    <TextBlock Text="Created: Jan 10, 2018"/>
                </Border>
                <Border BorderThickness="0,0,0,2" BorderBrush="#167FFC">
                <TextBlock Text="Updated: Jan 22, 2022"/>
                    </Border>
                <Border BorderThickness="0,0,0,2" BorderBrush="#167FFC">
                <TextBlock Text="Total: Downloads 10,877,594"/>
                    </Border>
                <Border BorderThickness="0,0,0,2" BorderBrush="#167FFC">
                    <TextBlock Text="License: All Rights Reserved"/>
                </Border>
            </StackPanel>
            <TextBlock Text="Curseforge offical page." 
                   Grid.Row="5"
                   Name="CurseforgeUrl" 
                   MouseLeftButtonDown="CurseforgeUrl_Click"
                   Foreground="Blue"
                   Height="40"/>
        </Grid>
    </Grid>
</Page>
