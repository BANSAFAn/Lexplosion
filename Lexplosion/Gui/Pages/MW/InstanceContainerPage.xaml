<Page x:Class="Lexplosion.Gui.Pages.MW.InstanceContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.MW" xmlns:usercontrols="clr-namespace:Lexplosion.Gui.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="InstanceContainerPage">

    <Grid x:Name="MainGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Background>
                <!-- #1313131 0.8-->
                <!-- "Black" 0.64 -->
                <SolidColorBrush Color="#121212" Opacity="0.65"/>
            </ScrollViewer.Background>
            <Grid ShowGridLines="False" x:Name="InstanceGrid" Margin="40, 0, 0, 0">
                <!-- Grid Border Padding-->
                <Grid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Padding" Value="10" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Grid Height="60" x:Name="SearchTools">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Canvas x:Name="SearchLayer" Grid.Row="0">

                    </Canvas>
                    <Canvas>
                        <TextBlock Text="Sort by" Foreground="White" Width="1"/>
                            <ComboBox Width="100" Grid.Column="0"/>
                            <TextBlock Text="Filter by" Foreground="White" Width="50"/>
                        <ComboBox Width="100" Margin="52,0,449,0"/>
                    </Canvas>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
