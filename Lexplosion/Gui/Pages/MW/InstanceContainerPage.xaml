<Page x:Class="Lexplosion.Gui.Pages.MW.InstanceContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.MW"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="944"
      Title="InstanceContainerPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="244"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="LeftSideMenu" Grid.Column="0">
            <Grid.Background>
                <SolidColorBrush Color="#18191b"/>
            </Grid.Background>
            <StackPanel x:Name="LeftSideMenuStackPanel" Margin="-1,10,0,0" Visibility="Visible" >
                <ToggleButton Focusable="False" x:Name="LeftSideMenuButton0" Style="{StaticResource MWCBS1}" />
                <ToggleButton Focusable="False" x:Name="LeftSideMenuButton1" Style="{StaticResource MWCBS1}" />
                <ToggleButton Focusable="False" x:Name="LeftSideMenuButton2" Style="{StaticResource MWCBS1}" />
                <ToggleButton Focusable="False" x:Name="LeftSideMenuButton3" Style="{StaticResource MWCBS1}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Background>
                    <!-- #1313131 0.8-->
                    <!-- "Black" 0.64 -->
                    <SolidColorBrush Color="#121212" Opacity="0.65"/>
                </ScrollViewer.Background>
                <Grid ShowGridLines="False" x:Name="InstanceGrid" Margin="40, 0, 0, 0">
                    <!-- Grid Border Padding-->
                    <Grid.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Padding" Value="10" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>
                    <Grid Width="300" Height="50" ShowGridLines="False" Grid.Row="0" Margin="160,20,101,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBox Width="300" 
                        Height="50" 
                        VerticalAlignment="Top"
                        Background="Black" 
                        Foreground="LightGray"
                        Padding="5"
                        FontSize="26"
                        BorderThickness="0.5"
                        BorderBrush="#131313"
                        Grid.Column="0"
                        x:Name="SearchBox">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button Width="50" 
                        Height="50"
                        Grid.Column="1"
                        Click="MatchingResults" 
                        Background="Black"
                        Foreground="White"
                        Content="S"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
