<Page x:Class="Lexplosion.Gui.Pages.MW.InstanceContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:usercontrols="clr-namespace:Lexplosion.Gui.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="InstanceContainerPage">

    <Grid x:Name="MainGrid" Focusable="False">
        <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ContainerPage_ScrollViewer">
            <ScrollViewer.Background>
                <!-- #1313131 0.8-->
                <!-- "Black" 0.64 -->
                <SolidColorBrush Color="#121212" Opacity="0.65"/>
            </ScrollViewer.Background>
            <Grid x:Name="ControlElementsGrid" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid ShowGridLines="False" x:Name="InstanceGrid" Grid.Row="1" Margin="0, 0, 0, 0">
                    <TextBlock x:Name="LoadingLabel" 
                               Text="Идёт загрузка. Пожалуйста подождите..." 
                               Foreground="DarkGray"
                               FontStyle="Italic"
                               TextAlignment="Center"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,30,0,0"
                               Visibility="Visible" Height="35" Width="480"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
