<Page x:Class="Lexplosion.Gui.Pages.Right.Menu.LibraryContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.Right.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="LibraryContainerPage">
    <!-- #131313 0.7-->
    <!-- "Black" 0.64 -->
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Background>
                <!-- #1313131 0.8-->
                <!-- "Black" 0.64 -->
                <SolidColorBrush Color="#121212" Opacity="0.65"/>
            </ScrollViewer.Background>
            <Grid ShowGridLines="False" x:Name="InstanceGrid" Margin="40, 0, 0, 0">
                <!-- Grid Border Padding-->
                <Grid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Padding" Value="10" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
