<Page x:Class="Lexplosion.Gui.Pages.Right.Menu.ModpacksContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.Right.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="499" d:DesignWidth="700"
      Title="TestModpacksContainerPage">

    <Page.Resources>
    </Page.Resources>

    <ScrollViewer>
        <ScrollViewer.Background>
            <SolidColorBrush Color="#131313" Opacity="0.8"/>
        </ScrollViewer.Background>
        <Grid ShowGridLines="False" x:Name="InstanceGrid">
            <Grid.Background>
                <SolidColorBrush Color="#131313" Opacity="0.8"/>
            </Grid.Background>
            <!-- Grid Border Padding-->
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Padding" Value="10" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </ScrollViewer>
</Page>
