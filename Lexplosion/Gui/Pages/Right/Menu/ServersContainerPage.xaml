<Page x:Class="Lexplosion.Gui.Pages.Right.Menu.ServersContainerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lexplosion.Gui.Pages.Right"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="ServersContainerPage">

    <Grid Background="#131313" Opacity="0.7" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="10" />
            </Style>
        </Grid.Resources>
        <TextBlock Foreground="White" FontSize="30" FontWeight="Bold" Text="Сервера" />
        <Grid x:Name="Friends" Grid.Row="1" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="230" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Margin" Value="0,0,10,0" />
                </Style>
            </Grid.Resources>
            <Grid x:Name="Friend">
                <Grid.Background>
                    <SolidColorBrush Color="#072236" Opacity="0.9"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" ShowGridLines="False" Margin="4,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="21.333" />
                        <RowDefinition Height="3.667"/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" 
                               Text="Hel2x" 
                               Foreground="#18E813"
                               FontSize="16" Margin="0,2"
                               TextTrimming="WordEllipsis"/>
                    <TextBlock Grid.Row="1" 
                               Text="FTB Infinity Evolved Skyblock(v2.0.1)"
                               Foreground="#18E813" 
                               FontSize="13"
                               TextTrimming="WordEllipsis"
                               VerticalAlignment="Center" Margin="0,4,0,3" Grid.RowSpan="2"/>
                </Grid>

                <Image Width="52"
                       Height="52" 
                       Source="pack://application:,,,/Assets/images/icons/non_image.png" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                </Image>
                <Canvas Width="5" Height="48" HorizontalAlignment="Left" Background="#18E813" Margin="2,0,3,0"/>
            </Grid>
            <Grid x:Name="Friend1" Grid.Column="1">
                <Grid.Background>
                    <SolidColorBrush Color="#072236" Opacity="0.9"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" ShowGridLines="False" Margin="4,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                               Text="Дядя ХЕР знает кто..." 
                               Foreground="#5773FF" 
                               FontSize="16"/>
                </Grid>
                <Image Width="52" Height="52" Source="pack://application:,,,/Assets/images/icons/non_image.png"  HorizontalAlignment="Right"/>
                <Canvas Width="5" Height="48" HorizontalAlignment="Left" Background="#5773FF" Margin="2,0,0,0"/>
            </Grid>
            <Grid x:Name="Friend2" Grid.Column="2" >
                <Grid.Background>
                    <SolidColorBrush Color="#072236" Opacity="0.9"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" ShowGridLines="False" Margin="4,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                               Text="Игорь" 
                               Foreground="Gray" 
                               FontSize="16"/>
                    <TextBlock Grid.Row="1" 
                               Text="Был в сети 14 часов назад"
                               Foreground="Gray" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               />
                </Grid>
                <Image Width="52" Height="52" Source="pack://application:,,,/Assets/images/icons/non_image.png" HorizontalAlignment="Right"/>
                <Canvas Width="5" Height="48" HorizontalAlignment="Left" Background="Gray" Margin="2,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
