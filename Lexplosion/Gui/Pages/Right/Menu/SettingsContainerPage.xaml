                      BorderThickness="1"
                      MaxDropDownHeight="180"
                      >
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1920x1080" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1920x1080" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1768x992" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1680x1050" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1600x1024" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1600x900" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1440x900" />
                </ComboBoxItem>
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1280x1024" />
                </ComboBoxItem>                
                <ComboBoxItem Margin="20,0,0,0" Width="120" FontSize="16">
                    <TextBlock Text="1366x768" />
                </ComboBoxItem>
            </ComboBox>
            <TextBox Style="{StaticResource CTB}"
                     FontSize="20"
                     Height="42" 
                     Text="1920"
                     Margin="338,87,194,372"/>
            <Canvas>
                <Line X1="1" Y1="0" X2="13" Y2="13"
                      Stroke="White" StrokeThickness="2"
                      Canvas.Left="310" Canvas.Top="110"/>
                <Line X1="1" Y1="13" X2="13" Y2="0" 
                      Stroke="White" StrokeThickness="2"
                      Canvas.Left="310" Canvas.Top="110" />
            </Canvas>
            <TextBox Style="{StaticResource CTB}"
                     FontSize="20"
                     Width="160" 
                     Height="42" 
                     Text="1280"
                     Margin="137,87,396,372"/>
            <TextBlock Text="Держать лаунчер открытым при запуске игры"
                       Height="35"
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#FFF" Margin="73,157,194,309"/>
            <usercontrols:SwitchButton Width="70" Height="31" Margin="73,200,550,276"/>
            <TextBlock Text="Папка с игрой"
                       Height="35"
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#FFF" Margin="73,243,194,223"/>
            <TextBox Style="{StaticResource CTB}"
                     FontSize="20"
                     Height="42" 
                     Text="C:\Users\GamerStorm_Hel2x_\night-world"
                     Margin="73,288,194,176" />
            <Button 
                    Height="42"
                    Content="Проводник"
                    Foreground="#fff"
                    FontWeight="Bold" BorderThickness="0" Margin="504,288,114,176" Background="#FF1EAFDD"/>
        </Grid>
    </ScrollViewer>
</Page>
