                                    </Border>
                                    
                                    <Canvas Grid.Row="1" Background="AliceBlue" Opacity="0.02">
                                        <Canvas.Effect>
                                            <BlurEffect />
                                        </Canvas.Effect>
                                    </Canvas>
                                    <Border Grid.Row="1">
                                        <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" RecognizesAccessKey="True" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00aeff" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid ShowGridLines="False">
            <Grid.Background>
                <SolidColorBrush Color="#131313" Opacity="0.8"/>
            </Grid.Background>
            <!-- Grid Border Padding-->
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Padding" Value="5" />
                </Style>
            </Grid.Resources>
            <!-- Grid Field Markup -->
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
            </Grid.ColumnDefinitions>

            <!-- Modpack Cells -->
            <!-- 0 -->
            <Border Grid.Column="0" Grid.Row="0">
                <!-- Max 14 chars-->
                <Button Style="{StaticResource ModpackButton}" Content="Energy of Spacess" Foreground="#FFF" />
            </Border>
            <Border Grid.Column="1" Grid.Row="0">
                <Button Style="{StaticResource ModpackButton}" Content="Long Tech" />
            </Border>
            <Border Grid.Column="2" Grid.Row="0" >
                <Button Style="{StaticResource ModpackButton}" Content="Transport Network" />
            </Border>
            <Border Grid.Column="3" Grid.Row="0" >
                <Button Style="{StaticResource ModpackButton}" Content="Infinity Space" />
            </Border>

            <!-- 1 -->

            <Border Grid.Column="0" Grid.Row="1">
                <Button Style="{StaticResource ModpackButton}"  Content="Energy of Space"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="1">
                <Button Style="{StaticResource ModpackButton}" Content="Long Tech" />
            </Border>
            <Border Grid.Column="2" Grid.Row="1" >
                <Button Style="{StaticResource ModpackButton}" Content="Transport Network" />
            </Border>
            <Border Grid.Column="3" Grid.Row="1" >
                <Button Style="{StaticResource ModpackButton}" Content="Infinity Space" />
            </Border>

            <!-- 2 -->

            <Border Grid.Column="0" Grid.Row="2">
                <Button Style="{StaticResource ModpackButton}"  Content="Energy of Space"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="2">
                <Button Style="{StaticResource ModpackButton}" Content="Long Tech" />
            </Border>
            <Border Grid.Column="2" Grid.Row="2" >
                <Button Style="{StaticResource ModpackButton}" Content="Transport Network" />
            </Border>
            <Border Grid.Column="3" Grid.Row="2" >
                <Button Style="{StaticResource ModpackButton}" Content="Infinity Space" />
            </Border>

            <Border Grid.Column="0" Grid.Row="3">
                <Button Style="{StaticResource ModpackButton}"  Content="Energy of Space"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="3">
                <Button Style="{StaticResource ModpackButton}" Content="Long Tech" />
            </Border>
            <Border Grid.Column="2" Grid.Row="3" >
                <Button Style="{StaticResource ModpackButton}" Content="Transport Network" />
            </Border>
            <Border Grid.Column="3" Grid.Row="3" >
                <Button Style="{StaticResource ModpackButton}" Content="Infinity Space" />
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
