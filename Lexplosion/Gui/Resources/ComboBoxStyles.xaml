                    <Border
                        Name="Border"
                        Background="Transparent"
                        SnapsToDevicePixels="true">
                        <ContentPresenter Margin="3" HorizontalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource BrandSolidColorBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Default ComboBox  -->
    <ControlTemplate x:Key="LighterDefaultComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
        <Border
            x:Name="Border"
            Width="{TemplateBinding Width}"
            Height="{TemplateBinding Height}"
            Background="#1f1f1f"
            BorderBrush="#121212"
            BorderThickness="0"
            CornerRadius="6">
