<UserControl x:Class="Lexplosion.Gui.UserControls.SwitchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lexplosion.Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Width="70" Height="31">
        <Grid Width="70" Height="31">
            <Rectangle x:Name="Back"
                       Fill="#1EAFDD"
                       Width="70" Height="31"
                       Stroke="#202224"
                       HorizontalAlignment="Left" 
                       StrokeThickness="2"
                       RadiusX="8"
                       RadiusY="8"
                       MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Rectangle x:Name="Dot" 
                       Fill="#202224" 
                       Width="35" 
                       Height="25" 
                       RadiusX="8" 
                       RadiusY="8"
                       MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="3,3,32,3"/>
        </Grid>
    </Viewbox>
</UserControl>
