<UserControl
    x:Class="Lexplosion.Gui.Views.Pages.AuthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extension="clr-namespace:Lexplosion.Gui.Extension"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Lexplosion.Gui.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AuthViewModel}"
    d:DesignHeight="528"
    d:DesignWidth="944"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Custom Register Button  -->
        <Style x:Key="CRB" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="pack://application:,,,/assets/fonts/#Casper Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="false">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="LightCyan" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SPS" TargetType="{x:Type ToggleButton}">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border
                            Width="20"
                            Height="20"
                            Background="Transparent">
                            <Viewbox Width="20" Height="20">
                                <Path
                                    x:Name="Path"
                                    Fill="White"
                                    Stretch="Fill" />
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Path" Property="Path.Data" Value="M24 31.5q3.55 0 6.025-2.475Q32.5 26.55 32.5 23q0-3.55-2.475-6.025Q27.55 14.5 24 14.5q-3.55 0-6.025 2.475Q15.5 19.45 15.5 23q0 3.55 2.475 6.025Q20.45 31.5 24 31.5Zm0-2.9q-2.35 0-3.975-1.625T18.4 23q0-2.35 1.625-3.975T24 17.4q2.35 0 3.975 1.625T29.6 23q0 2.35-1.625 3.975T24 28.6Zm0 9.4q-7.3 0-13.2-4.15Q4.9 29.7 2 23q2.9-6.7 8.8-10.85Q16.7 8 24 8q7.3 0 13.2 4.15Q43.1 16.3 46 23q-2.9 6.7-8.8 10.85Q31.3 38 24 38Zm0-15Zm0 12q6.05 0 11.125-3.275T42.85 23q-2.65-5.45-7.725-8.725Q30.05 11 24 11t-11.125 3.275Q7.8 17.55 5.1 23q2.7 5.45 7.775 8.725Q17.95 35 24 35Z" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Path" Property="Path.Data" Value="m31.45 27.05-2.2-2.2q1.3-3.55-1.35-5.9-2.65-2.35-5.75-1.2l-2.2-2.2q.85-.55 1.9-.8 1.05-.25 2.15-.25 3.55 0 6.025 2.475Q32.5 19.45 32.5 23q0 1.1-.275 2.175-.275 1.075-.775 1.875Zm6.45 6.45-2-2q2.45-1.8 4.275-4.025Q42 25.25 42.85 23q-2.5-5.55-7.5-8.775Q30.35 11 24.5 11q-2.1 0-4.3.4-2.2.4-3.45.95L14.45 10q1.75-.8 4.475-1.4Q21.65 8 24.25 8q7.15 0 13.075 4.075Q43.25 16.15 46 23q-1.3 3.2-3.35 5.85-2.05 2.65-4.75 4.65Zm2.9 11.3-8.4-8.25q-1.75.7-3.95 1.075T24 38q-7.3 0-13.25-4.075T2 23q1-2.6 2.775-5.075T9.1 13.2L2.8 6.9l2.1-2.15L42.75 42.6ZM11.15 15.3q-1.85 1.35-3.575 3.55Q5.85 21.05 5.1 23q2.55 5.55 7.675 8.775Q17.9 35 24.4 35q1.65 0 3.25-.2t2.4-.6l-3.2-3.2q-.55.25-1.35.375T24 31.5q-3.5 0-6-2.45T15.5 23q0-.75.125-1.5T16 20.15Zm15.25 7.1Zm-5.8 2.9Z" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MicrosoftEnter" TargetType="{x:Type Button}">
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border
                            x:Name="Border"
                            Padding="4,6,4,6"
                            Background="Transparent"
                            CornerRadius="5">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Viewbox
                                    Width="20"
                                    Height="20"
                                    Stretch="Fill">
                                    <Path
                                        x:Name="Path"
                                        Data="M24.45 42v-3H39V9H24.45V6H39q1.2 0 2.1.9.9.9.9 2.1v30q0 1.2-.9 2.1-.9.9-2.1.9Zm-3.9-9.25L18.4 30.6l5.1-5.1H6v-3h17.4l-5.1-5.1 2.15-2.15 8.8 8.8Z"
                                        Fill="White"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                </Viewbox>
                                <TextBlock
                                    x:Name="TextBlock"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Bottom"
                                    FontFamily="{DynamicResource FuturaBookC}"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="Войти" />
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.1" Color="{DynamicResource ActivityColor}" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Path" Property="Fill" Value="{DynamicResource BrandSolidColorBrush}" />
                                <Setter TargetName="Path" Property="Stroke" Value="{DynamicResource BrandSolidColorBrush}" />
                                <Setter TargetName="TextBlock" Property="TextElement.Foreground" Value="{DynamicResource BrandSolidColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MicrosoftChangeAccount" TargetType="{x:Type Button}">
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border
                            x:Name="Border"
                            Padding="4,6,4,6"
                            Background="Transparent"
                            CornerRadius="5">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Viewbox Width="20" Height="20">
                                    <Path
                                        x:Name="Path"
                                        Data="M20 23.75q-3.3 0-5.4-2.1-2.1-2.1-2.1-5.4 0-3.3 2.1-5.4 2.1-2.1 5.4-2.1 3.3 0 5.4 2.1 2.1 2.1 2.1 5.4 0 3.3-2.1 5.4-2.1 2.1-5.4 2.1ZM4 39.8v-4.7q0-1.75.875-3.15T7.4 29.8q3.6-1.6 6.675-2.3 3.075-.7 5.925-.7h1.15q-.3.7-.45 1.375-.15.675-.25 1.625H20q-2.9 0-5.675.625T8.6 32.5q-.8.4-1.2 1.125Q7 34.35 7 35.1v1.7h13.45q.25.9.6 1.625t.85 1.375ZM33.35 42l-.5-3.3q-.85-.25-1.725-.725-.875-.475-1.475-1.075l-2.75.6-1.25-2.1L28 33.2q-.1-.45-.1-1.25t.1-1.25l-2.35-2.2 1.25-2.1 2.75.6q.6-.6 1.475-1.075.875-.475 1.725-.725l.5-3.3h2.7l.5 3.3q.85.25 1.725.725.875.475 1.475 1.075l2.75-.6 1.25 2.1-2.35 2.2q.1.45.1 1.25t-.1 1.25l2.35 2.2-1.25 2.1-2.75-.6q-.6.6-1.475 1.075-.875.475-1.725.725l-.5 3.3Zm1.35-6.05q1.8 0 2.9-1.1 1.1-1.1 1.1-2.9 0-1.8-1.1-2.9-1.1-1.1-2.9-1.1-1.8 0-2.9 1.1-1.1 1.1-1.1 2.9 0 1.8 1.1 2.9 1.1 1.1 2.9 1.1ZM20 20.75q1.95 0 3.225-1.275Q24.5 18.2 24.5 16.25q0-1.95-1.275-3.225Q21.95 11.75 20 11.75q-1.95 0-3.225 1.275Q15.5 14.3 15.5 16.25q0 1.95 1.275 3.225Q18.05 20.75 20 20.75Zm0-4.5Zm.45 20.55Z"
                                        Fill="White"
                                        Stretch="Fill"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                </Viewbox>

                                <TextBlock
                                    x:Name="TextBlock"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Bottom"
                                    FontFamily="{DynamicResource FuturaBookC}"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="Сменить аккаунт" />
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.1" Color="{DynamicResource ActivityColor}" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Path" Property="Fill" Value="{DynamicResource BrandSolidColorBrush}" />
                                <Setter TargetName="Path" Property="Stroke" Value="{DynamicResource BrandSolidColorBrush}" />
                                <Setter TargetName="TextBlock" Property="TextElement.Foreground" Value="{DynamicResource BrandSolidColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/images/background/authBG.png" />
    </UserControl.Background>

    <Grid ShowGridLines="False">
        <Grid Grid.Row="1" ShowGridLines="False">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265*" />
                <ColumnDefinition Width="627" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" ShowGridLines="False">

                <Grid.Background>
                    <SolidColorBrush Opacity="0.64" Color="Black" />
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock
                        Margin="0,66,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="pack://application:,,,/Assets/fonts/#Arkhip"
                        FontSize="30"
                        Foreground="White"
                        Text="NightWorld" />

                    <Grid>

                        <!--  Auth fields [All except Microsoft OAuth2]  -->
                        <StackPanel Margin="0,60,0,0" Visibility="{Binding IsMicrosoftAccountManager, Converter={StaticResource NegativeConvertBoolToVisibility}}">

                            <TextBlock
                                Width="220"
                                Margin="0,0,0,30"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource FuturaBookC}"
                                FontSize="16"
                                Foreground="White"
                                Opacity="0.9"
                                Text="Для игры без аккаунта введите желаемый ник в поле логин."
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow"
                                Visibility="{Binding NoAccountAuth, Converter={StaticResource ConvertBoolToVisibility}}" />

                            <controls:PlaceholderTextBox
                                Width="145"
                                Height="30"
                                Margin="0,0,0,50"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                IsEnabled="True"
                                Placeholder="{DynamicResource login}"
                                PlaceholderFontSize="16"
                                Style="{StaticResource AuthPlaceholerTextBox}"
                                Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />

                            <!--  Password area  -->
                            <StackPanel
                                Margin="0,0,0,23"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="{Binding NoAccountAuth, Converter={StaticResource NegativeConvertBoolToVisibility}}">

                                <!--  password box  -->
                                <Grid Width="145">
                                    <TextBox
                                        x:Name="PasswordVisible"
                                        Height="30"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource AuthTextBox}"
                                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                        Visibility="Hidden" />
                                    <PasswordBox
                                        Width="145"
                                        Height="30"
                                        HorizontalAlignment="Center"
                                        extension:PasswordBox.IsPasswordSaved="True"
                                        extension:PasswordBox.Attach="True"
                                        extension:PasswordBox.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Style="{StaticResource CustomPasswordBox}" />
                                </Grid>

                                <!--<ToggleButton
                                    x:Name="ShowPassword"
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    IsChecked="True"
                                    Style="{StaticResource SPS}" />-->
                                <!--  Click="ShowPassword_Click"  -->
                            </StackPanel>

                            <!--  Save AuthData checkBox  -->
                            <CheckBox
                                Height="Auto"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{DynamicResource saveMe}"
                                IsChecked="{Binding IsSaveMe}" />

                            <!--  SignUpCommand  -->
                            <Button
                                Width="166"
                                Height="40"
                                Margin="0,39,0,0"
                                Command="{Binding SignUpCommand}"
                                Content="{DynamicResource singIn}"
                                FontSize="20"
                                Style="{StaticResource DefaultBrandColorButton}" />
                        </StackPanel>

                        <!--  For Microsoft Auth  -->
                        <!--  Border size 120-150  -->
                        <StackPanel Margin="0,60,0,0" Visibility="{Binding IsMicrosoftAccountManager, Converter={StaticResource ConvertBoolToVisibility}}">
                            <Border
                                Width="200"
                                Height="120"
                                Background="{DynamicResource SepSolidColorBrush}"
                                CornerRadius="5">
                                <StackPanel>
                                    <StackPanel x:Name="HeaderStackPanel">
                                        <Grid x:Name="HeaderGrid" Margin="5,0,0,0">

                                            <!--  Skin Ellipse  -->
                                            <!--<Ellipse
                                                Width="30"
                                                Height="30"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Center"
                                                Fill="#167FCC" />-->

                                            <!--  Logout  -->
                                            <Border
                                                Margin="0,5,5,0"
                                                Padding="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Background="Transparent"
                                                CornerRadius="5">
                                                <Viewbox
                                                    Width="20"
                                                    Height="20"
                                                    Stretch="Fill">
                                                    <Path
                                                        Data="M9 42q-1.2 0-2.1-.9Q6 40.2 6 39V9q0-1.2.9-2.1Q7.8 6 9 6h14.55v3H9v30h14.55v3Zm24.3-9.25-2.15-2.15 5.1-5.1h-17.5v-3h17.4l-5.1-5.1 2.15-2.15 8.8 8.8Z"
                                                        Fill="White"
                                                        Stroke="White"
                                                        StrokeThickness="1" />
                                                </Viewbox>
                                            </Border>

                                            <!--
                                                If Text.Lenght == 8 -> to HeaderGrid *and* Margin="5,5,0,0"
                                                Else Text.Lenght > 8 -> to HeaderStackPanel *and* Margin="5,10,0,0"
                                            -->
                                            <TextBlock
                                                x:Name="NicknameTextBlock"
                                                Margin="5,5,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{DynamicResource FuturaBookC}"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="{Binding Login}" />
                                        </Grid>

                                    </StackPanel>

                                    <!--  Buttons  -->
                                    <Border Margin="0,5,0,0" BorderThickness="0,1,0,0">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Opacity="0.5" Color="Black" />
                                        </Border.BorderBrush>
                                        <StackPanel HorizontalAlignment="Left">

                                            <Button
                                                Margin="5,5,0,0"
                                                HorizontalContentAlignment="Left"
                                                Command="{Binding SignUpCommand}"
                                                Style="{StaticResource MicrosoftEnter}" />


                                            <Button
                                                Width="190"
                                                Height="30"
                                                Margin="5,5,0,0"
                                                HorizontalContentAlignment="Left"
                                                Command="{Binding SingUpMicrosoftCommand}"
                                                Style="{StaticResource MicrosoftChangeAccount}" />


                                            <Button
                                                Width="130"
                                                Height="30"
                                                Margin="5,5,0,0"
                                                HorizontalContentAlignment="Left"
                                                Style="{StaticResource IconicButton}"
                                                Visibility="Collapsed">
                                                <StackPanel Background="Transparent" Orientation="Horizontal">
                                                    <Viewbox
                                                        Width="20"
                                                        Height="20"
                                                        Stretch="Fill">
                                                        <Path
                                                            Data="M9 42q-1.2 0-2.1-.9Q6 40.2 6 39V9q0-1.2.9-2.1Q7.8 6 9 6h14.55v3H9v30h14.55v3Zm24.3-9.25-2.15-2.15 5.1-5.1h-17.5v-3h17.4l-5.1-5.1 2.15-2.15 8.8 8.8Z"
                                                            Fill="White"
                                                            Stroke="White"
                                                            StrokeThickness="1" />
                                                    </Viewbox>

                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Bottom"
                                                        FontFamily="{DynamicResource FuturaBookC}"
                                                        FontSize="14"
                                                        Foreground="White"
                                                        Text="Выйти" />
                                                </StackPanel>
                                            </Button>

                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.Resources>
                        <ControlTemplate x:Key="te" TargetType="{x:Type ToggleButton}">
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <Viewbox
                                    Width="14"
                                    Height="14"
                                    Margin="0,2,0,0">
                                    <Path
                                        x:Name="Arrow"
                                        VerticalAlignment="Center"
                                        Data="m24 30.75-12-12 2.15-2.15L24 26.5l9.85-9.85L36 18.8Z"
                                        Fill="White"
                                        Stretch="Fill" />
                                </Viewbox>

                                <ContentPresenter
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center"
                                    IsHitTestVisible="False"
                                    TextBlock.FontSize="12"
                                    TextBlock.Foreground="White" />
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Arrow" Property="Path.Data" Value="M14.15 30.75 12 28.6l12-12 12 11.95-2.15 2.15L24 20.85Z" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Grid>
                                            <ToggleButton
                                                Name="ToggleButton"
                                                Grid.Column="2"
                                                HorizontalContentAlignment="Left"
                                                ClickMode="Press"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                Foreground="WhiteSmoke"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                IsTabStop="False"
                                                Template="{StaticResource te}" />
                                            <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True" />
                                            <!--  None, Fade, Scroll, Slide  -->
                                            <Popup
                                                Name="Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                Placement="Top"
                                                PopupAnimation="Scroll">
                                                <Grid
                                                    Name="DropDown"
                                                    MinWidth="140"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                    SnapsToDevicePixels="True">
                                                    <Border
                                                        x:Name="DropDownBorder"
                                                        Background="#1f1f1f"
                                                        BorderBrush="{DynamicResource BrandSolidColorBrush}"
                                                        BorderThickness="2"
                                                        CornerRadius="2" />
                                                    <ScrollViewer
                                                        Margin="4,6,4,6"
                                                        HorizontalContentAlignment="Left"
                                                        SnapsToDevicePixels="True">
                                                        <StackPanel
                                                            IsItemsHost="True"
                                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                                            TextBlock.FontSize="14" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="SnapsToDevicePixels" Value="False" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontWeight" Value="DemiBold" />
                            <Setter Property="OverridesDefaultStyle" Value="true" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                        <Border Name="Border" SnapsToDevicePixels="true">
                                            <ContentPresenter Margin="3" HorizontalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsHighlighted" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource BrandSolidColorBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>

                    <ComboBox
                        Height="30"
                        HorizontalAlignment="Center"
                        SelectedIndex="{Binding AccountTypeSelectedIndex, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem>
                            <TextBlock Text="{DynamicResource noAccount}" />
                        </ComboBoxItem>
                        <ComboBoxItem IsSelected="True">
                            <TextBlock Text="{DynamicResource accountNightWorld}" />
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="{DynamicResource accountMojang}" />
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="{DynamicResource accountMicrosoft}" />
                        </ComboBoxItem>
                        <!--<ComboBoxItem>
                            Аккаунт Ely
                        </ComboBoxItem>-->
                    </ComboBox>
                </Grid>
            </Grid>
        </Grid>

        <controls:LoadingBoard
            BackgroundColor="Black"
            BackgroundOpacity="0.7"
            IsLoadingFinished="{Binding IsAuthFinished}"
            Placeholder="{Binding LoadingBoardPlaceholder}" />

        <Button
            Width="100"
            Height="30"
            Margin="0,200,0,0"
            Command="{Binding CancelMicrosoftAuthCommand}"
            Content="Отмена"
            Style="{StaticResource DefaultBrandColorButton}"
            Visibility="{Binding IsAuthFinished, Converter={StaticResource NegativeConvertBoolToVisibility}}" />
    </Grid>
</UserControl>