<UserControl x:Class="Lexplosion.Gui.Views.Pages.AuthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Lexplosion.Gui.ViewModels" 
             xmlns:helpers="clr-namespace:Lexplosion.Gui.Helpers"
             d:DataContext="{d:DesignInstance Type=viewmodels:AuthViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="422" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Custom Register Button -->
        <Style x:Key="CRB" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/assets/fonts/#Casper Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="Border" SnapsToDevicePixels="True" BorderBrush="Transparent" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="false">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="LightCyan"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SPS" TargetType="{x:Type ToggleButton}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Width="17.5" Height="11.8" x:Name="SPBorder">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SPBorder" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/assets/images/icons/hide_password.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SPBorder" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/assets/images/icons/visible_password.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/images/background/authBG.png"/>
    </UserControl.Background>

    <Grid Margin="0,0,0,0" ShowGridLines="False">
        <Grid Grid.Row="1" ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265*"></ColumnDefinition>
                <ColumnDefinition Width="627"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ShowGridLines="False">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.64" />
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="NightWorld" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="30"
                           FontFamily="pack://application:,,,/Assets/fonts/#Arkhip"
                           Margin="9,66,8.8,10"/>

                <Grid Grid.Row="2">
                    <TextBox Style="{StaticResource AuthTextBox}" 
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             Width="125" Height="30" 
                             HorizontalContentAlignment="Center" 
                             HorizontalAlignment="Center"
                             />
                    <!--GotFocus="Login_GotFocus" 
                             LostFocus="Login_LostFocus"-->
                </Grid>
                <Grid Grid.Row="4" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="86"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="86"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="PasswordBoxWaterMark"
                            Height="30"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" 
                            Foreground="#b9b7b7" 
                            FontSize="15"/>
                        <TextBox x:Name="PasswordVisible" 
                            Style="{StaticResource AuthTextBox}" 
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                            Width="125" Height="30" 
                                 Visibility="Hidden"
                            HorizontalContentAlignment="Center"
                            />
                        <!--GotFocus="PasswordVisible_GotFocus"
                            LostFocus="PasswordVisible_LostFocus"-->
                        <PasswordBox Style="{StaticResource CustomPasswordBox}"
                            helpers:PasswordBoxHelper.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            helpers:PasswordBoxHelper.Attach="True"
                            Height="30" 
                            />
                        <!--GotFocus="Password_GotFocus"
                            LostFocus="Password_LostFocus"-->
                    </Grid>
                    <ToggleButton
                        IsChecked="True"
                        Grid.Column="2"
                        Style="{StaticResource SPS}" 
                        x:Name="ShowPassword"
                        HorizontalAlignment="Left"
                        Margin="10"
                        Height="20" Width="20"
                        />
                    <!--Click="ShowPassword_Click"-->
                </Grid>
                <Grid Grid.Row="5" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <CheckBox Style="{StaticResource CustomCheckBox}"
                        Content="Запомнить меня" HorizontalAlignment="Center"
                        VerticalAlignment="Center" IsChecked="{Binding IsSaveMe}"
                        Height="Auto" Grid.Row="0"/>
                    <Button Style="{StaticResource DefaultBrandColorButton}"
                        Command="{Binding SingUpCommand}" Content="Войти"
                        Width="166" Height="40" 
                        FontSize="20" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>