<UserControl
    x:Class="Lexplosion.Gui.Views.Pages.FactoryMenu.FactoryGeneralView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="clr-namespace:Lexplosion"
    d:DesignHeight="420"
    d:DesignWidth="360"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  TextBlock  -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="5,0,0,0" />
        </Style>

        <Style x:Key="LogoButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderThickness="3">
                            <Border.Background>
                                <SolidColorBrush Opacity="0.1" Color="#131313" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.3" Color="Black" />
                            </Border.BorderBrush>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <TabControl
        BorderThickness="0"
        ItemContainerStyle="{StaticResource TEST}"
        Style="{StaticResource TabControlStyle}">

        <TabControl.Resources>
            <Style TargetType="{x:Type TabPanel}">
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </TabControl.Resources>

        <TabItem BorderBrush="Transparent" Header="Создание">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="330" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <ScrollViewer>
                    <StackPanel Margin="20" Orientation="Vertical">

                        <!--  Name  -->
                        <StackPanel
                            Width="313"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Название сборки" />
                            <controls:PlaceholderTextBox
                                Height="40"
                                Margin="0,5,0,0"
                                Padding="5,0,0,0"
                                VerticalContentAlignment="Center"
                                Background="#1f1f1f"
                                BorderBrush="#121212"
                                BorderThickness="1"
                                FontSize="16"
                                FontWeight="Regular"
                                Foreground="White"
                                Placeholder="Название сборки"
                                PlaceholderFontSize="16"
                                PlaceholderOpacity="0.8"
                                PlaceholderColor="White"
                                Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Minecraft Version  -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Версия Minecraft" />
                            <ComboBox
                                Margin="0,5,0,0"
                                ItemsSource="{Binding GameVersions}"
                                SelectedValue="{Binding SelectedVersion, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Game Type  -->
                        <StackPanel Margin="0,15,0,0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Game Type" />
                            <StackPanel Margin="5,10,0,0" Orientation="Horizontal">
                                <RadioButton
                                    Command="{Binding SwitchModloaderType}"
                                    CommandParameter="{x:Static objects:ModloaderType.None}"
                                    Content="Vanilla"
                                    FontSize="16"
                                    GroupName="GameType"
                                    IsChecked="True" />
                                <RadioButton
                                    Margin="10,0,0,0"
                                    Command="{Binding SwitchModloaderType}"
                                    CommandParameter="{x:Static objects:ModloaderType.Forge}"
                                    Content="Forge"
                                    FontSize="16"
                                    GroupName="GameType" />
                            </StackPanel>

                            <StackPanel Margin="5,10,0,0" Orientation="Horizontal">
                                <RadioButton
                                    Command="{Binding SwitchModloaderType}"
                                    CommandParameter="{x:Static objects:ModloaderType.Fabric}"
                                    Content="Fabric"
                                    FontSize="16 "
                                    GroupName="GameType" />

                                <RadioButton
                                    Margin="15,0,0,0"
                                    Command="{Binding SwitchModloaderType}"
                                    CommandParameter="{x:Static objects:ModloaderType.Quilt}"
                                    Content="Quilt"
                                    FontSize="16 "
                                    GroupName="GameType" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Modloader Version and some  -->
                        <StackPanel Visibility="{Binding IsModloaderSelected, Converter={StaticResource ConvertBoolToVisibility}}">
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock HorizontalAlignment="Left" Text="Версия Modloader" />
                                <ComboBox
                                    Margin="0,5,0,0"
                                    ItemsSource="{Binding ModloaderVersions}"
                                    SelectedValue="{Binding SelectedModloaderVersion, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Margin="0,15,0,0">
                                <CheckBox Content="Установить optifine" />
                                <CheckBox Margin="0,2,0,0" Content="Установить iris + sodium" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="10,0,0,0"
                        Command="{Binding Action}"
                        Content="Создать"
                        FontSize="14"
                        Style="{StaticResource DefaultBrandColorButton}" />

                    <Button
                        Width="80"
                        Height="30"
                        Margin="10,0,0,0"
                        Command="{Binding CloseModalWindow}"
                        Content="Отмена"
                        FontSize="14"
                        Style="{StaticResource DefaultCloseButton}" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Импорт">
            <ContentControl Content="{Binding ImportVM}" Margin="0"/>
        </TabItem>
    </TabControl>
</UserControl>