<UserControl
    x:Class="Lexplosion.Gui.Views.Pages.FactoryMenu.FactoryGeneralView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="clr-namespace:Lexplosion"
    d:DesignHeight="450"
    d:DesignWidth="700"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  TextBlock  -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="5,0,0,0" />
        </Style>

        <Style x:Key="LogoButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderThickness="3">
                            <Border.Background>
                                <SolidColorBrush Opacity="0.1" Color="#131313" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.3" Color="Black" />
                            </Border.BorderBrush>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer>
            <Grid Height="450" ShowGridLines="True">
                <Grid.Background>
                    <SolidColorBrush Opacity="0.60" Color="#171717" />
                </Grid.Background>
                <!--  Name  -->
                <TextBlock
                    Width="244"
                    Height="30"
                    Margin="26,26,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Название"
                    TextAlignment="Left" />

                <Grid
                    Margin="30,55,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <TextBox
                        x:Name="InstanceNameTB"
                        Width="244"
                        Height="40"
                        Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"
                        Opacity="0.8"
                        Text="Название сборки">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="18" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, ElementName=InstanceNameTB}" Value="" />
                                            <Condition Binding="{Binding IsFocused, ElementName=InstanceNameTB}" Value="false" />
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!--  Version  -->
                <TextBlock
                    Width="244"
                    Height="30"
                    Margin="300,26,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Версия"
                    TextAlignment="Left" />
                <ComboBox
                    Width="200"
                    Height="40"
                    Margin="302,55,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemsSource="{Binding GameVersions}"
                    SelectedValue="{Binding SelectedVersion, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Logo  -->
                <Button
                    x:Name="InstanceLogo"
                    Width="120"
                    Height="120"
                    Margin="0,20,50,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding LogoImportCommand}"
                    Content="Logo"
                    Style="{StaticResource LogoButton}" />

                <!--  Modloader  -->
                <TextBlock
                    Margin="30,120,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Game Type" />

                <StackPanel Margin="35,150,0,0" Orientation="Horizontal">
                    <RadioButton
                        x:Name="NoneSelected"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding SwitchModloaderType}"
                        CommandParameter="{x:Static objects:ModloaderType.None}"
                        Content="Vanilla"
                        FontSize="18"
                        IsChecked="True" />
                    <!--  Click="SelectInstanceRadioButton_Click"  -->
                    <RadioButton
                        x:Name="ForgeSelected"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding SwitchModloaderType}"
                        CommandParameter="{x:Static objects:ModloaderType.Forge}"
                        Content="Forge"
                        FontSize="18" />
                    <!--  Click="SelectInstanceRadioButton_Click"  -->
                    <RadioButton
                        x:Name="FabricSelected"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding SwitchModloaderType}"
                        CommandParameter="{x:Static objects:ModloaderType.Fabric}"
                        Content="Fabric"
                        FontSize="18" />
                </StackPanel>

                <!--  Line Margin="35,0,0,0"  X1="1" X2="40" Y1="200" Y2="200" StrokeThickness="1" Stroke="Red"/  -->

                <!--  More  -->
                <StackPanel Margin="30,195,0,0" Visibility="{Binding IsModloaderSelected, Converter={StaticResource ConvertBoolToVisibility}}">
                    <TextBlock HorizontalAlignment="Left" Text="Modloader Version" />

                    <ComboBox
                        Width="180"
                        Height="40"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Background="Red"
                        ItemsSource="{Binding ModloaderVersions}"
                        SelectedValue="{Binding SelectedModloaderVersion, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button
                    Width="105"
                    Height="35"
                    Margin="26,250,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding CreateInstance}"
                    Content="Собрать"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Style="{StaticResource DefaultBrandColorButton}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>