<UserControl
    x:Class="Lexplosion.Gui.Views.Pages.FactoryMenu.FactoryGeneralView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="clr-namespace:Lexplosion"
    d:DesignHeight="420"
    d:DesignWidth="360"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  TextBlock  -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="5,0,0,0" />
        </Style>

        <Style x:Key="LogoButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderThickness="3">
                            <Border.Background>
                                <SolidColorBrush Opacity="0.1" Color="#131313" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.3" Color="Black" />
                            </Border.BorderBrush>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TabControl
            BorderThickness="0"
            ItemContainerStyle="{StaticResource TEST}"
            Style="{StaticResource TabControlStyle}">

            <TabControl.Resources>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </TabControl.Resources>

            <TabItem BorderBrush="Transparent" Header="Создание">
                <ScrollViewer Grid.Row="1">
                    <StackPanel Margin="20" Orientation="Vertical">
                        <!--<Button
                                    Width="100"
                                    Height="100"
                                    Margin="0,0,0,20"
                                    Style="{StaticResource LogoButton}" />-->

                        <StackPanel
                            Width="313"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Название сборки" />
                            <TextBox
                                Margin="0,5,0,0"
                                FontSize="16"
                                FontWeight="Normal" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Версия Minecraft" />
                            <ComboBox
                                Margin="0,5,0,0"
                                ItemsSource="{Binding GameVersions}"
                                SelectedValue="{Binding SelectedVersion, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Margin="0,15,0,0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" Text="Game Type" />
                            <StackPanel Orientation="Horizontal">
                                <RadioButton
                                    Margin="10"
                                    Content="Vanilla"
                                    FontSize="16" />
                                <RadioButton
                                    Margin="10,0,0,0"
                                    Content="Forge"
                                    FontSize="16" />
                                <RadioButton
                                    Margin="10,0,0,0"
                                    Content="Fabric"
                                    FontSize="16 " />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Visibility="{Binding IsModloaderSelected, Converter={StaticResource ConvertBoolToVisibility}}">
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock HorizontalAlignment="Left" Text="Версия Modloader" />
                                <ComboBox Margin="0,5,0,0" />
                            </StackPanel>

                            <StackPanel Margin="0,15,0,0">
                                <CheckBox Content="Установить optifine" />
                                <CheckBox Margin="0,2,0,0" Content="Установить iris + sodium" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="30"
                                Command="{Binding CloseModalWindow}"
                                Content="Отмена"
                                Style="{StaticResource DefaultCloseButton}" />

                            <Button
                                Width="100"
                                Height="30"
                                Margin="10"
                                Command="{Binding Action}"
                                Content="Создать"
                                Style="{StaticResource DefaultBrandColorButton}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Импорт">
                <ContentControl Content="{Binding ImportVM}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>