<UserControl x:Class="Lexplosion.Gui.Views.Pages.MainMenu.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:Lexplosion.Gui.Helpers" xmlns:gui="clr-namespace:Lexplosion.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <gui:Constants x:Key="Const"/>
    </UserControl.Resources>
    <Grid Margin="25,0,0,0">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid ShowGridLines="False" Height="460">
                <Grid.Background>
                    <!-- "Black" 0.64 -->
                    <SolidColorBrush Color="#191919"  Opacity="0.65"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Width="15" Height="15" 
                          VerticalAlignment="Bottom" Margin="0,0,3,2">
                        <Ellipse Grid.Column="0" 
                                 Width="15" Height="15" 
                                 StrokeThickness="1" 
                                 Stroke="White" />
                        <TextBlock Text="i" 
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   FontSize="11" />
                    </Grid>
                    <TextBlock Grid.Column="1" 
                               Text="Общие настройки. Настройки для конкретного клиента можно изенить на его странице"
                               Foreground="#BBBBBB"
                               FontWeight="Bold"
                               FontSize="14"
                               VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding Source={StaticResource Const}, Path=ScreenResolutions}"
                              SelectedValue="{Binding GeneralSettings.ScreenResolution}"
                              Width="44" Height="42"
                              MaxDropDownHeight="180"
                              Style="{StaticResource SettingsComboBox}"
                              ItemContainerStyle="{StaticResource SettingsComboBoxItem}"
                              HorizontalAlignment="Left"/>
                    <Grid Grid.Column="1" ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Ширина" 
                                Width="87"
                                HorizontalAlignment="Left"
                                Height="30"
                                Foreground="#eee" 
                                FontSize="16" 
                                FontWeight="Medium"
                                Margin="10,0,0,0" />
                        <TextBox
                            Style="{StaticResource SettingsTextBox}"
                            BorderBrush="#121212"
                            BorderThickness="1"
                            helpers:TextBoxHelper.OnlyNumeric="Uint"
                            helpers:TextBoxHelper.DefaultValue="120"
                            FontSize="20"
                            Width="125" Height="42" 
                            Grid.Row="1" 
                            Text="{Binding GeneralSettings.WindowWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    </Grid>
                    <Grid Grid.Column="2" ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Высота" 
                                Width="87"
                                Height="30"
                                Foreground="#eee" 
                                FontSize="16" 
                                FontWeight="Medium"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,0" />
                        <TextBox Grid.Row="1"
                                Style="{StaticResource SettingsTextBox}"
                                BorderBrush="#121212"
                                BorderThickness="1"
                                helpers:TextBoxHelper.OnlyNumeric="Uint"
                                helpers:TextBoxHelper.DefaultValue="120"
                                FontSize="20"
                                Height="42" Width="125"
                                Text="{Binding GeneralSettings.WindowHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="1" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ОЗУ" 
                               Width="87"
                               Height="30"
                               Foreground="#ddd" 
                               FontSize="16" 
                               FontWeight="Medium"
                               HorizontalAlignment="Left"
                               Margin="5,0,0,0" />
                    <TextBox Grid.Row="1"
                             Style="{StaticResource SettingsTextBox}"
                             BorderBrush="#121212"
                             BorderThickness="1"
                             helpers:TextBoxHelper.OnlyNumeric="Uint"
                             helpers:TextBoxHelper.DefaultValue="512"
                             Text="{Binding GeneralSettings.Xmx}"
                             FontSize="20"
                             Height="42" Width="125">
                    </TextBox>
                </Grid>
                <Grid Grid.Row="4" Grid.Column="1" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                               Text="Папка с игрой"
                               Height="35"
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="#ddd" 
                               Margin="5,0,0,0" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Style="{StaticResource SettingsTextBox}"
                                BorderBrush="#121212"
                                BorderThickness="0"
                                FontSize="20"
                                Text="{Binding GeneralSettings.SystemPath, UpdateSourceTrigger=PropertyChanged}"
                                Foreground="#bbb"
                                Height="42" 
                                Margin="5,0,0,0"/>
                        <Button Grid.Column="1"
                                Content="Обзор"
                                Style="{StaticResource FolderBrowerButton}"
                                Height="38"
                                FontWeight="Medium"
                                Command="{Binding OpenFolderBrowser}" />
                    </Grid>
                </Grid>
                <StackPanel Grid.Row="5" Grid.Column="1" Margin="5,0,0,0">
                    <CheckBox Content="Обновлять сборки автоматически"
                              Style="{StaticResource CustomCheckBox}"
                              IsChecked="{Binding GeneralSettings.IsAutoUpdate}" />
                    <CheckBox Content="Скрывать лаунчер при запуске игры"
                              IsChecked="{Binding GeneralSettings.IsHiddenMode}"
                              Style="{StaticResource CustomCheckBox}" />
                    <CheckBox Content="Показывать консоль"
                              Style="{StaticResource CustomCheckBox}"
                              IsChecked="{Binding GeneralSettings.IsShowConsole}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>