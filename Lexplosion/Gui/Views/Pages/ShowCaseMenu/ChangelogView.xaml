<UserControl
    x:Class="Lexplosion.Gui.Views.Pages.ShowCaseMenu.ChangelogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.Gui.Views.Pages.ShowCaseMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources />

    <Grid>
        <Border Padding="15" BorderBrush="#343434">
            <StackPanel>
                <controls:ChangelogItem
                    Margin="0,1,0,0"
                    Id="0212"
                    UpdateType="Beta"
                    Version="1.2.1" />
                <controls:ChangelogItem
                    Margin="0,1,0,0"
                    Id="0232"
                    UpdateType="Alpha"
                    Version="1.2.0" />
                <controls:ChangelogItem
                    Margin="0,1,0,0"
                    Id="0222"
                    UpdateType="Release"
                    Version="1.0.0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
