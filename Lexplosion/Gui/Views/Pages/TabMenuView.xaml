<UserControl x:Class="Lexplosion.Gui.Views.Pages.TabMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lexplosion.Gui.Views.Pages.FactoryMenu" xmlns:viewmodels="clr-namespace:Lexplosion.Gui.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid ShowGridLines="False" Focusable="False">
        <Grid.Background>
            <SolidColorBrush Color="#191919"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Focusable="False">
            <Grid.Background>
                <SolidColorBrush Color="#191919"/>
            </Grid.Background>
        </Grid>
        <TextBlock Text="{Binding Header}"
                   Grid.Column="1"
                   FontSize="18"
                   Margin="30,10,0,10"
                   VerticalAlignment="Center" 
                   FontWeight="SemiBold"
                   Grid.Row="0"
                   Foreground="WhiteSmoke" Height="40" />
        <Border BorderThickness="0,0,0,1" Grid.Row="1" BorderBrush="#282a2e" />
        <TabControl Background="#18191b" 
                    BorderThickness="0,1,0,0"
                    Grid.Row="1"
                    Style="{StaticResource TabControlStyle}"
                    BorderBrush="#212326"
                    ItemsSource="{Binding Tabs}" SelectedValue="{Binding SelectedTab}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource SwitcherTabItem}" />
            </TabControl.Resources>
            <TabControl.ContentTemplate>
                <!-- this is the body of the TabItem template-->
                <DataTemplate>
                    <ContentControl 
                        Content="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>