<Window x:Class="Lexplosion.Gui.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="944" 
        Height="528"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Assets/images/icons/logo.ico"
        AllowsTransparency="False" WindowStyle="None">

    <Window.Background>
        <SolidColorBrush Color="#18191b" />
    </Window.Background>

    <Grid Margin="0,0,0,0" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="499*" />
        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,1" BorderBrush="#212326">
            <Grid ShowGridLines="False">
                <Grid.Background>
                    <SolidColorBrush Color="#151719" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="28" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Width="20" Height="20" Source="pack://application:,,,/Assets/images/icons/logo.ico"/>
                <TextBlock FontSize="16"  Grid.Column="2" Foreground="White" Text="Lexplosion" Margin="4,2,0,0"/>
                <Button Width="28" 
                        Height="28" 
                        Grid.Column="4" 
                        Style="{StaticResource CBSG}"
                        Command="{Binding HideCommand, Source={StaticResource MainVM}}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
                    <Canvas>
                        <Line X1="0" Y1="0" Y2="0" X2="12.5" Canvas.Left="8" Canvas.Top="15" Stroke="LightGray" StrokeThickness="0.5"/>
                    </Canvas>
                </Button>
                <Button Width="28"
                        Height="28" 
                        Grid.Column="5" 
                        Style="{StaticResource CBSG}" 
                        Command="{Binding CloseCommand, Source={StaticResource MainVM}}">
                    <Canvas>
                        <Line X1="1" Y1="0" X2="13" Y2="13" Canvas.Left="7" Canvas.Top="8" Stroke="LightGray" StrokeThickness="0.5"/>
                        <Line X1="1" Y1="13" X2="13" Y2="0" Canvas.Left="7" Canvas.Top="8" Stroke="LightGray" StrokeThickness="0.5"/>
                    </Canvas>
                </Button>
            </Grid>
        </Border>
        <!-- Custom Menu -->
        <ContentControl 
            Grid.Row="1"
            Content="{Binding CurrentViewModel, Source={StaticResource MainVM}}" />
        <Border Visibility="{Binding IsShowInfoBar, Source={StaticResource MainVM}, Converter={StaticResource ConvertBoolToVisibility}}"
                Grid.Row="1" VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" Background="#151719"
                Width="248" Height="34">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="34" />
                </Grid.ColumnDefinitions>
                <Ellipse Width="12" Height="12" 
                         Fill="Green"
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
                <TextBlock FontWeight="Bold" 
                           FontSize="18"
                           Grid.Column="1"
                           TextAlignment="Center" 
                           Width="120" Height="23" 
                           Foreground="#fff"
                           Text="{Binding Nickname, Source={StaticResource MainVM}}"/>
                <Button Grid.Column="2" Content="Logout"
                        Command="" Background="Transparent" 
                        Style="{StaticResource LogoutButton}"
                        BorderBrush="Transparent" Foreground="#fff">
                    <Button.ToolTip>
                        <ToolTip
                            Placement="Relative" 
                            Background="Black" 
                            HorizontalOffset="-80"
                            VerticalOffset="-30"
                            BorderThickness="0"
                            FontFamily="pack://application:,,,/assets/fonts/#Casper Bold">
                            <TextBlock Text="Настройки пользователя" FontSize="12" Foreground="White"/>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>