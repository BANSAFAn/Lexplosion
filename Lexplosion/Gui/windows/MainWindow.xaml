                                Width="16" 
                                Height="16"                                
                                Stroke="#fff"
                                StrokeThickness="1" 
                                RenderTransformOrigin="0.5,0.5">
                            </Path>
                            <ContentPresenter/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
