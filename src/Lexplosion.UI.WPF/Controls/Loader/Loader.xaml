<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls">
    <Style TargetType="{x:Type controls:Loader}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Loader}">
                    <Grid>
                        <Grid x:Name="LoaderBackground">
                            <ContentPresenter />
                        </Grid>

                        <!--  Loader  -->
                        <Grid x:Name="Loader" Visibility="Collapsed">

                            <Grid.Background>
                                <SolidColorBrush Opacity="0" Color="Black" />
                            </Grid.Background>

                            <Grid
                                x:Name="RotatingParts"
                                Width="228"
                                Height="228"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                RenderTransformOrigin="0.5, 0.5">

                                <Grid.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </Grid.RenderTransform>

                                <!--  Orbit  -->
                                <Ellipse
                                    x:Name="Orbit"
                                    Width="200"
                                    Height="200"
                                    Stroke="Black"
                                    StrokeThickness="2" />

                                <!--  Planet  -->
                                <Ellipse
                                    x:Name="Planet"
                                    Width="32"
                                    Height="32"
                                    VerticalAlignment="Top"
                                    Stroke="Black"
                                    StrokeThickness="10">
                                    <Ellipse.Fill>
                                        <LinearGradientBrush>
                                            <GradientStop Color="#0258bd" />
                                            <GradientStop Color="{DynamicResource ActivityColor}" />
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>

                            <!--  Star  -->
                            <Border
                                x:Name="Star"
                                Width="120"
                                Height="120"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="1000">

                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="100"
                                        Direction="0"
                                        ShadowDepth="0"
                                        Color="{DynamicResource ActivityColor}" />
                                </Border.Effect>

                                <Border.Background>
                                    <ImageBrush ImageSource="pack://Application:,,,/Assets/Images/icons/logo.ico" />
                                </Border.Background>
                            </Border>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsActive" Value="True">
                            <Trigger.EnterActions>

                                <!--  Start Loader Animation  -->
                                <BeginStoryboard x:Name="RotationAnimation">
                                    <Storyboard>
                                        <DoubleAnimation
                                            BeginTime="00:00:02.000"
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetName="RotatingParts"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                            From="0"
                                            To="360"
                                            Duration="00:00:02.000" />
                                    </Storyboard>
                                </BeginStoryboard>

                            </Trigger.EnterActions>

                            <!--  Stop animation when IsAction == false  -->
                            <Trigger.ExitActions>
                                <PauseStoryboard BeginStoryboardName="RotationAnimation" />
                            </Trigger.ExitActions>

                            <!--  Set Content Blur  -->
                            <Setter TargetName="LoaderBackground" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="10" />
                                </Setter.Value>
                            </Setter>

                            <!--  Show Loader  -->
                            <Setter TargetName="Loader" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="IsActive" Value="False">
                            <!--  Remove Content Blur  -->
                            <Setter TargetName="LoaderBackground" Property="Effect" Value="{x:Null}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>