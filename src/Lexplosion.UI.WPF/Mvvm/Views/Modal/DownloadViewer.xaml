<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Modal.DownloadViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Modal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="clr-namespace:Lexplosion.UI.WPF.Mvvm.ViewModels.Modal" d:DataContext="{d:DesignInstance Type=model:DownloadViewerModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={converters:WindowWidthToXProcentWidth}, ConverterParameter=60}"
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={converters:WindowHeightToXProcentHeight}, ConverterParameter=80}"
        Padding="20,0,20,16"
        Background="{DynamicResource PrimarySolidColorBrush}"
        CornerRadius="10">

        <Grid x:Name="Content">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border
                    Margin="-20,16,-20,0"
                    Padding="0,0,0,10"
                    VerticalAlignment="Top"
                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Selected Page Title  -->
                        <TextBlock
                            Margin="20,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="Обзор ошибки" />

                        <!--  Close Button  -->
                        <controls:AdvancedButton
                            Margin="0,0,20,0"
                            Padding="8"
                            HorizontalAlignment="Right"
                            Panel.ZIndex="10000"
                            Command="{Binding CloseCommand}"
                            IconData="{DynamicResource PDClose}"
                            IsCancel="True"
                            Style="{StaticResource TransparentAdvancedButton}" />
                    </Grid>

                </Border>

                <Grid
                    x:Name="AccountFactoryForm"
                    Grid.Row="1"
                    Margin="0,16,0,0"
                    IsEnabled="{Binding Model.IsAuthorizationInProcess, Converter={converters:NegativeBooleanValueConverter}}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="14" Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                        <Run Text="Заголовок: " />
                        <Run Text="Не удалось скачать некоторые файлы" />
                    </TextBlock>


                    <Border
                        Grid.Row="1"
                        Margin="0,16,0,0"
                        Padding="8"
                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                        BorderThickness="1"
                        CornerRadius="5">

                        <TabControl
                            Background="Transparent"
                            BorderBrush="#131313"
                            BorderThickness="10"
                            TabStripPlacement="Left">

                            <TabControl.Resources>

                                <Style TargetType="{x:Type TabPanel}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>

                            </TabControl.Resources>

                            <TabItem Header="В процессе">

                                <ScrollViewer Height="450" Padding="10">
                                    <ItemsControl ItemsSource="{Binding DownloadingFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:InstanceFile}">
                                                <Border
                                                    Width="330"
                                                    Height="40"
                                                    Margin="0,10,0,0"
                                                    Padding="5"
                                                    Background="#252525"
                                                    BorderBrush="#505050"
                                                    BorderThickness="2"
                                                    CornerRadius="5">
                                                    <Grid HorizontalAlignment="Stretch">
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel>
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    FontWeight="Medium"
                                                                    Foreground="White"
                                                                    Text="{Binding Name}" />
                                                                <ProgressBar
                                                                    Width="280"
                                                                    Height="5"
                                                                    Margin="0,5,0,0"
                                                                    HorizontalAlignment="Left"
                                                                    Maximum="100"
                                                                    Minimum="0"
                                                                    Value="{Binding Procents}" />
                                                            </StackPanel>
                                                            <TextBlock
                                                                Margin="10,0,0,0"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                FontSize="12"
                                                                FontWeight="Medium"
                                                                Foreground="White"
                                                                Text="{Binding Procents, StringFormat={}{0}%}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header="Неудачно">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ErrorsFiles}" ScrollViewer.CanContentScroll="True">

                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel IsItemsHost="True" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:InstanceFile}">
                                                <Border
                                                    Width="330"
                                                    Height="30"
                                                    Margin="0,10,0,0"
                                                    Padding="5"
                                                    Background="#252525"
                                                    BorderBrush="#505050"
                                                    BorderThickness="2"
                                                    CornerRadius="5">
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontWeight="Medium"
                                                                Foreground="White"
                                                                Text="{Binding Name}" />
                                                            <ProgressBar
                                                                Width="200"
                                                                Height="5"
                                                                Margin="10,0,0,0"
                                                                Maximum="100"
                                                                Minimum="0"
                                                                Value="{Binding Procents}" />
                                                            <TextBlock
                                                                Margin="10,0,0,0"
                                                                FontSize="12"
                                                                FontWeight="Medium"
                                                                Foreground="Red"
                                                                Text="{DynamicResource failedToDownloadFiles}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem HorizontalAlignment="Center" Header="Завершено">
                                <ScrollViewer Height="450">
                                    <ItemsControl ItemsSource="{Binding InstalledFiles}">

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:InstanceFile}">
                                                <Border
                                                    Width="330"
                                                    Height="30"
                                                    Margin="0,10,0,0"
                                                    Padding="5"
                                                    Background="#252525"
                                                    BorderBrush="#505050"
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                    <Grid>
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="Medium"
                                                            Foreground="White"
                                                            Text="{Binding Name}" />
                                                        <TextBlock
                                                            Margin="0,0,10,0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="12"
                                                            FontWeight="Medium"
                                                            Foreground="White"
                                                            Text="No info" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
