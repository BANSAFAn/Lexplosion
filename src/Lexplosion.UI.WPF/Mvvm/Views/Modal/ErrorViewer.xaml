<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Modal.ErrorViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:core="clr-namespace:Lexplosion.UI.WPF.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.UI.WPF.Extensions"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Modal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modal="clr-namespace:Lexplosion.UI.WPF.Mvvm.ViewModels.Modal"
    d:DataContext="{d:DesignInstance Type=modal:ErrorViewerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={converters:WindowWidthToXProcentWidth}, ConverterParameter=60}"
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={converters:WindowHeightToXProcentHeight}, ConverterParameter=80}"
        Padding="20,0,20,16"
        Background="{DynamicResource PrimarySolidColorBrush}"
        CornerRadius="10">

        <Grid x:Name="Content">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border
                    Margin="-20,16,-20,0"
                    Padding="0,0,0,10"
                    VerticalAlignment="Top"
                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Selected Page Title  -->
                        <!--  TODO: 1.0.1.0 Translate  -->
                        <TextBlock
                            Margin="20,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                            Text="Обзор ошибки" />

                        <!--  Close Button  -->
                        <controls:AdvancedButton
                            Margin="0,0,20,0"
                            Padding="8"
                            HorizontalAlignment="Right"
                            Panel.ZIndex="10000"
                            Command="{Binding CloseCommand}"
                            IconData="{DynamicResource PDClose}"
                            IsCancel="True"
                            Style="{StaticResource TransparentAdvancedButton}" />
                    </Grid>

                </Border>

                <Grid
                    x:Name="AccountFactoryForm"
                    Grid.Row="1"
                    Margin="0,16,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>

                        <!--  TODO: 1.0.1.0 Translate  -->
                        <TextBlock FontSize="14" Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                            <Run FontWeight="Medium" Text="Заголовок: " />
                            <Run Text="Не удалось скачать некоторые файлы" />
                        </TextBlock>

                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Border
                                Padding="2,0"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1,0,0,0">
                                <Button
                                    x:Name="CopyAllButton"
                                    Height="20"
                                    Content="CopyAll"
                                    Cursor="Hand"
                                    Style="{StaticResource x32IconButtonWithHover}"
                                    ToolTip="Copy All" />
                            </Border>
                            <Border
                                Padding="2,0"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1,0,0,0">
                                <Button
                                    Height="20"
                                    Content="FileUpload"
                                    Cursor="Hand"
                                    Style="{StaticResource x32IconButtonWithHover}"
                                    ToolTip="Save to file" />
                            </Border>
                        </StackPanel>

                    </Grid>


                    <Grid Grid.Row="1" Margin="0,16,0,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  TODO: 1.0.1.0 Translate  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{DynamicResource PrimaryForegroundSolidColor}"
                                Text="Дополнительная информация:" />

                            <controls:SearchBox
                                Grid.Column="1"
                                Placeholder="Название файла/ошибки"
                                Style="{StaticResource sm-searchbox-default}"
                                Text="{Binding Model.SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Border
                            Grid.Row="1"
                            Margin="0,8,0,0"
                            Padding="8,0,0,0"
                            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <core:If Condition="{Binding Model.AdditionalInfo, Converter={converters:IsCollectionEmptyConverter}}">
                                <core:If.True>
                                    <controls:Empty Title="Дополнительная информация отсутствует" />
                                </core:If.True>
                                <core:If.False>
                                    <RichTextBox />
                                    <!--<ListBox
                                        ItemsSource="{Binding Model.AdditionalInfo.Filtered}"
                                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                                        Style="{StaticResource TransparentListBox}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Padding="0,6"
                                                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                                    BorderThickness="0,0,0,1">
                                                    <TextBlock
                                                        FontSize="14"
                                                        Foreground="Red"
                                                        Text="{Binding}" />
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>-->
                                </core:If.False>
                            </core:If>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
