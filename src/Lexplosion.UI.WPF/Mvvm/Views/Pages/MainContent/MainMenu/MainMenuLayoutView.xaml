<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Pages.MainContent.MainMenu.MainMenuLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.ViewModels.MainContent.MainMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:news="clr-namespace:Lexplosion.UI.WPF.ViewComponents.News"
    d:DataContext="{d:DesignInstance Type=local:MainMenuLayoutViewModel}"
    d:DesignHeight="528"
    d:DesignWidth="944"
    mc:Ignorable="d">
    <Grid
        Background="{DynamicResource PageSolidColorBrush}"
        Loaded="Grid_Loaded"
        MouseDown="Grid_MouseDown">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.363*" MaxWidth="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ContentControl Content="{Binding LeftPanel}" KeyboardNavigation.IsTabStop="False" />

        <ContentControl
            Grid.Column="1"
            Content="{Binding Content}"
            KeyboardNavigation.IsTabStop="False"
            KeyboardNavigation.TabNavigation="None" />

        <!--  Latest News View  -->
        <news:LatestNewsView Grid.ColumnSpan="2" DataContext="{Binding LatestNewsViewModel}" Visibility="{Binding Model.HasUnseenNews, UpdateSourceTrigger=PropertyChanged, Converter={converters:BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
