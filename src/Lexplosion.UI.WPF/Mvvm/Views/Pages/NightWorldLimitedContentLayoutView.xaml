<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Pages.NightWorldLimitedContentLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:core="clr-namespace:Lexplosion.UI.WPF.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:limited="clr-namespace:Lexplosion.UI.WPF.Mvvm.ViewModels.Limited"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nightworld="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Pages.PageCurtains.NightWorld"
    d:DataContext="{d:DesignInstance Type=limited:NightWorldLimitedContentLayoutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <core:If Condition="{Binding HasAccess}" DataContext="{Binding}">
            <core:If.True>
                <ContentControl Content="{Binding Content}" />
            </core:If.True>
            <core:If.False>
                <!--<controls:PageCurtains IsActive="{Binding HasAccess, Converter={converters:NegativeBooleanValueConverter}}" />-->
                <core:If Condition="{Binding IsModalTarget}">
                    <core:If.True>
                        <nightworld:NightWorldModalPageCurtainsView x:Name="ModalCurtains" />
                    </core:If.True>
                    <core:If.False>
                        <nightworld:NightWorldPageCurtainsView x:Name="PageCurtains" />
                    </core:If.False>
                </core:If>
            </core:If.False>
        </core:If>
    </Grid>
</UserControl>
