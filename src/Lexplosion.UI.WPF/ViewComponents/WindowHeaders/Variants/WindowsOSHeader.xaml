<local:HeaderBase
    x:Class="Lexplosion.UI.WPF.WindowComponents.Header.Variants.WindowsOSHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.UI.WPF.Controls"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.UI.WPF.Extensions"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.WindowComponents.Header.Variants"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windowHeaders="clr-namespace:Lexplosion.UI.WPF.ViewComponents.WindowHeaders"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <local:HeaderBase.Resources>

        <Style x:Key="WindowsHeaderButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundSolidColorBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="Transparent">
                            <ContentPresenter
                                Margin="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SeparateSolidColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:HeaderBase.Resources>

    <Grid>
        <Grid
            x:Name="WindowHeaderPanelButtonsGrid"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyboardNavigation.IsTabStop="False"
            ShowGridLines="False"
            Visibility="Visible">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


            <!--  Close & Hide Buttons  -->

            <StackPanel
                x:Name="WindowHeaderPanelButtons"
                Orientation="Horizontal"
                RenderTransformOrigin="0.5, 0.5">

                <!--  Close Button  -->

                <Button Click="Close" Style="{StaticResource WindowsHeaderButton}">
                    <Canvas
                        x:Name="Canvas"
                        Width="12"
                        Height="12"
                        Background="Transparent">

                        <Line
                            Stroke="{DynamicResource LatestForegroundSolidColorBrush}"
                            StrokeEndLineCap="Round"
                            StrokeStartLineCap="Round"
                            StrokeThickness="1.5"
                            X1="0"
                            X2="{Binding ActualWidth, ElementName=Canvas}"
                            Y1="0"
                            Y2="{Binding ActualHeight, ElementName=Canvas}" />
                        <Line
                            Stroke="{DynamicResource LatestForegroundSolidColorBrush}"
                            StrokeEndLineCap="Round"
                            StrokeStartLineCap="Round"
                            StrokeThickness="1.5"
                            X1="0"
                            X2="{Binding ActualWidth, ElementName=Canvas}"
                            Y1="{Binding ActualHeight, ElementName=Canvas}"
                            Y2="0" />
                    </Canvas>
                </Button>


                <!--  Maximized Button  -->

                <Button Click="Maximized" Style="{StaticResource WindowsHeaderButton}">
                    <Border
                        Width="12"
                        Height="12"
                        BorderBrush="{DynamicResource LatestForegroundSolidColorBrush}"
                        BorderThickness="2" />
                </Button>


                <!--  Minimaze Button  -->
                <Button Click="Minimazed" Style="{StaticResource WindowsHeaderButton}">
                    <Border
                        Width="12"
                        Height="2"
                        BorderBrush="{DynamicResource LatestForegroundSolidColorBrush}"
                        BorderThickness="0,2,0,0" />
                </Button>
            </StackPanel>
        </Grid>

        <windowHeaders:HeaderAddtionalFuncsPanelView
            x:Name="AdditionalFuncsPanel"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />
    </Grid>
</local:HeaderBase>
